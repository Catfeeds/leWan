<!doctype html>
<html>

	<head>
		<meta charset="UTF-8">
		<title>预约发货</title>
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<link href="../../css/mui.min.css" rel="stylesheet" />
		<link href="../../css/leWan.css" rel="stylesheet" />
		<link href="../../plugins/mui.picker.css" rel="stylesheet" />
		<link href="../../plugins/mui.poppicker.css" rel="stylesheet" />
		<link href="../../plugins/swiper-4.3.3.min.css" rel="stylesheet" />
		<link href="../../fonts/iconfont.css" rel="stylesheet" />
		<style type="text/css">
			body {
				padding: 0;
				margin: 0;
				background-color: #F8F8F8;
			}
			/*列表行间距调节*/
			
			.mui-input-row {
				height: 1.4rem !important;
				line-height: 1.4rem !important;
			}
			
			.mui-input-row label {
				line-height: 2;
			}
			
			.mui-input-row input {
				line-height: 2;
				height: auto;
			}
			
			.isClick {
				color: #F77917 !important;
			}
			
			.isClickFalse {
				color: #999999 !important;
			}
			
			.mui-input-row label {
				font-size: 0.426rem;
				color: #333333;
				font-weight: bold;
			}
			
			.mui-input-row input {
				font-size: 0.426rem;
			}
			
			.postscript label {
				font-size: 0.426rem;
				color: #333333;
				font-weight: bold;
				line-height: 1.1;
				float: left;
				width: 35%;
				padding: 11px 15px;
			}
			
			.postscript textarea {
				width: 90%;
				margin: 0 5% 15px 5%;
				background-color: #F2F2F2;
				padding: 5px 10px;
				border-radius: 8px;
				border: 1px solid #e7e7e7;
			}
			/*选择地址*/
			
			.secAddressBox {
				position: relative;
			}
			
			.mui-input-row img {
				position: absolute;
				right: 3%;
				width: 6%;
				padding: 0.6rem 0;
				top: 0;
				bottom: 0;
				margin: auto;
			}
			
			.content {
				overflow: hidden;
			}
			
			.mui-input-group {
				margin-top: 0.3rem;
			}
			
			.mui-input-group:after,
			.mui-input-group:before {
				height: 0;
			}
			/*选择地址模态窗*/
			
			.mui-modal {
				background-color: rgba(0, 0, 0, 0.5);
			}
			
			.moHeader {
				height: 1rem;
				line-height: 1rem;
				text-align: center;
				color: #333333;
				font-size: 0.426rem;
				font-weight: 500;
				background-color: #FFFFFF;
				border-bottom: 1px solid #F2F2F2;
				font-weight: 800;
				border-top-right-radius: 0.2rem;
				border-top-left-radius: 0.2rem;
			}
			
			.modalBox {
				margin-top: 50vh;
				height: 50vh;
				background-color: #FFFFFF;
				border-top-right-radius: 0.2rem;
				border-top-left-radius: 0.2rem;
			}
			
			.addressSecBox {
				height: 30vh;
				overflow-y: scroll;
			}
			
			.BuyNow {
				position: fixed;
				bottom: 0;
				width: 100%;
				height: 1.226rem;
				line-height: 1.226rem;
				text-align: center;
				font-size: 0.48rem;
				color: #FFFFFF;
				font-weight: bold;
				background-color: #E1B872;
			}
			
			.lw-empty,
			.lw-empty-box {
				height: 30vh;
			}
			
			.spaceBox {
				height: 1rem;
			}
			
			.nowAddBox {
				position: absolute;
				bottom: 0.2rem;
				width: 100%;
				text-align: center;
				z-index: 150;
			}
			
			.nowAdd {
				display: inline-block;
				width: 6.56rem;
				/*height: 1.3rem;*/
				line-height: 1.333rem;
				text-align: center;
				background: linear-gradient(to right, #FF791C 0%, #DC2609 100%);
				border-radius: 0.666rem;
				color: #FFFFFF;
				font-size: 0.426rem;
				font-weight: 500;
				box-shadow: 0 0 8px 1px rgba(0, 0, 0, 0.3);
			}
			
			.mui-table-view:after,
			.mui-table-view:before {
				height: 0;
				background-color: #FFFFFF !important;
			}
			
			.addaddress {
				text-align: center;
				font-size: 0.346rem;
				color: #999999;
			}
			
			.addaddress i {
				font-size: 0.3rem;
				margin-right: 0.15rem;
				color: #999999;
			}
			
			.addressMes {
				margin-top: 0.293rem;
			}
			
			.addressMes>span:nth-child(1) {
				display: inline-block;
				width: 90%;
				float: left;
				font-size: 0.346rem;
				color: #999999;
				white-space: nowrap;
				overflow: hidden;
				text-overflow: ellipsis;
			}
			
			.addressBox {
				width: 90%;
				float: left;
			}
			
			.addressBtn {
				float: left;
				width: 10%;
				text-align: center;
				margin-top: 0.3rem;
				color: #999999;
			}
			
			.addressBtn i {
				font-size: 0.6rem;
			}
			
			.selectIconColor {
				color: #FC9929;
			}
			
			.footer {
				background-color: #FFFFFF;
				width: 100%;
				text-align: center;
				padding: 0.8rem 0;
			}
			
			.footerBox {
				display: inline-block;
				width: 6.56rem;
				line-height: 1.333rem;
				text-align: center;
				background: linear-gradient(to right, #FF791C 0%, #DC2609 100%);
				border-radius: 0.666rem;
				color: #FFFFFF;
				font-size: 0.426rem;
				font-weight: 500;
				box-shadow: 0 0 10px 1px #F8864E;
			}
			
			.textBox {
				margin-top: 0.3rem;
				background-color: #FFFFFF;
				padding: 0.3rem 0.426rem;
			}
			
			.textTitle {
				text-align: center;
				font-size: 0.373rem;
				color: #333333;
				font-weight: 500;
			}
			
			.textFont {
				margin-top: 0.2rem;
				font-size: 0.373rem;
				color: #666666;
			}
			
			#ssq {
				padding-right: 1rem;
			}
			
			.userMes {
				font-size: 0.453rem;
				color: #333333;
				font-weight: 600;
			}
			
			.userMes>span:nth-child(2) {
				margin-left: 1.013rem;
				font-weight: 600;
			}
			
			.addressMes {
				margin-top: 0.293rem;
			}
			
			.addressMes>span:nth-child(1) {
				display: inline-block;
				width: 90%;
				float: left;
				font-size: 0.346rem;
				color: #999999;
				white-space: nowrap;
				overflow: hidden;
				text-overflow: ellipsis;
			}
			/*预约成功弹窗*/
			
			.modalTwo {
				display: none;
				width: 100vw;
				height: 100vh;
				position: fixed;
				top: 0;
				left: 0;
				background-color: rgba(0, 0, 0, 0.7);
				z-index: 10;
			}
			
			.modalBox2 {
				margin: 0 auto;
				margin-top: 3rem;
				width: 7.226rem;
				height: 8.266rem;
				border-radius: 0.2rem;
				overflow: hidden;
				background-color: #FFFFFF;
			}
			
			.reSuccess {
				background-size: 100% 100%;
				background-repeat: no-repeat;
				width: 100%;
				height: 5.946rem;
				overflow: hidden;
			}
			
			.reSuccess>div:nth-child(1) {
				text-align: center;
				margin-top: 4.293rem;
				color: #FFFFFF;
				font-size: 0.506rem;
				font-weight: 800;
			}
			
			.reSuccess>div:nth-child(2) {
				text-align: center;
				margin-top: 0.1rem;
				color: #FFFFFF;
				font-size: 0.373rem;
			}
			
			.callBackBox {
				width: 100%;
				height: 2.32rem;
				display: flex;
				display: -webkit-flex;
				justify-content: center;
				-webkit-justify-content: center;
				align-items: center;
				-webkit-align-items: center;
			}
			
			.callBackHomePage {
				width: 3.173rem;
				height: 1.013rem;
				line-height: 1.013rem;
				text-align: center;
				border: 1px solid #F77917;
				border-radius: 0.56rem;
				color: #F77917;
			}
		</style>
	</head>

	<body>
		<div id="J_el" v-cloak>
			<div class="content">
				<form class="mui-input-group">
					<div class="mui-input-row secAddressBox">
						<label>收货地址:</label>
						<input type="text" id="ssq" secFlag="0" disabled="disabled" placeholder="请选择收货地址">
						<a href="#modal"><img class="secAddress" src="../../img/personalCenter/adressEdit.png" /></a>
					</div>
					<div class="mui-input-row secAddressBox">
						<label>发货时间:</label>
						<input type="text" id="time" secDate="0" disabled="disabled" placeholder="请选择预约时间">
						<img class="secAddress secTime" src="../../img/personalCenter/adressEdit.png" />
					</div>
					<div class="mui-input-row secAddressBox">
						<label>备注信息:</label>
						<input type="text" id="remark" maxlength="20" placeholder="备注信息">
					</div>
				</form>
				<div class="textBox">
					<div class="textTitle">快递商品物流说明</div>
					<div class="textFont">
						在提交订单前，请您再次确认您的配送地址，如果因为您地址填写失误造成货物重复配送，我们有权按照实际配送次数收取物流费用。 收货人可以为您本人（既订货人）也可以为本人以外的其他人。我们将按照通过审核后的订单上所述的配送地址、收货人姓名和电话进行配送。如果收货人在配送过程中要求变更接收地址的，我们视同已经过您（既订货人）的同意。 如果您的配送地点属于办公区域，则前台人员代为签收视为已经经过您的同意。注：大额订单（大于等于人民币1000元）我们有权要求收货人出示身份证。 乐玩联盟将会把商品（货物）送到您所指定的收货地址，所有在本平台上列出的送货时间为参考时间，参考时间的计算是根据生产状况、正常的处理过程和送货时间、送货地点的基础上估计得出的，不代表商品（货物）实际真实送达您所指定的收货地址的时间。
						</br>
						因如下情况造成订单延迟或无法配送等，乐玩联盟不承担延迟配送的责任：
						</br>
						（1）用户提供的信息错误、地址不详细等原因导致的；
						</br>
						（2）货物送达后无人签收，导致无法配送或延迟配送的；
						</br>
						（3）情势变更因素导致的；
						</br>
						（4）不可抗力因素导致的，例如：自然灾害、交通戒严、突发战争等。
						</br>
						目前仅支持商家发货，或第三分物流平台配送，请下订单前确认，确保您提交的送货地址属于有效地理位置，若属于无效订单，我们有权拒绝。 当您（或代收货人）签收了所购买的商品时，该商品的毁损和灭失风险即转移到您这一方。

					</div>
				</div>
				<!--底部按钮-->
				<div class="footer">
					<div class="footerBox">确定</div>
				</div>

				<!--地址选择-->
				<div id="modal" class="mui-modal">
					<div class="modalBox">
						<header class="moHeader">收货地址选择</header>
						<ul class="mui-table-view addressSecBox" v-if="addrList.length">
							<li class="mui-table-view-cell" v-for="(items,index) in addrList" @tap="secDangqian(index,items.ssq,items.address,items.address_id)">
								<div class="addressBox">
									<div class="userMes">
										<span>{{ items.contact }}</span>
										<span>{{ items.mobile }}</span>
									</div>
									<div class="addressMes">
										<span>{{ items.ssq }}{{ items.address }}</span>
									</div>
								</div>
								<div class="addressBtn" v-bind:dataVal="items.address_id">
									<i class="selectIcon iconfont icon-xuanzhong"></i>
								</div>
							</li>
							<li class="mui-table-view-cell addaddress">
								<span class="goToAdd"><i class="iconfont icon-tianjia"></i>新增收货地址</span>
							</li>
						</ul>
						<!--空状态时-->
						<div class="lw-empty" style="display: block;" v-else>
							<div class="lw-empty-box">
								<div class="lw-empty-flex">
									<div class="spaceBox"></div>
									<img src="../../img/personalCenter/nullList2.png" alt="" class="lw-empty-img" />
									<!--<div class="lw-empty-test">暂无地址 去新增地址吧！</div>-->
								</div>
							</div>
						</div>
						<div v-if="addrList.length" class="nowAddBox">
							<a href="#modal">
								<div class="nowAdd">确定</div>
							</a>
						</div>
						<div v-else class="nowAddBox">
							<div class="nowAdd goToAdd">新增收货地址</div>
						</div>
					</div>
				</div>
				<!--预约成功-->
				<div class="modalTwo">
					<div class="modalBox2">
						<div class="reSuccess" style="background-image: url(../../img/reservationCenter/subscribe1.png);">
							<div>预约发货成功</div>
							<div>该订单过期不用自动作废</div>
						</div>
						<div class="callBackBox">
							<div class="callBackHomePage">返回首页</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<script src="../../plugins/flexible.js"></script>
		<script type="text/javascript" src="http://res.wx.qq.com/open/js/jweixin-1.4.0.js"></script>
		<script src="../../plugins/jquery-2.1.4.js"></script>
		<script src="../../plugins/vue.js"></script>
		<script src="../../js/mui.min.js"></script>
		<script src="../../plugins/mui.picker.min.js"></script>
		<script src="../../plugins/mui.poppicker.js"></script>
		<script src="../../plugins/swiper-4.3.3.min.js"></script>
		<script src="../../plugins/serverApi.js"></script>
		<script type="text/javascript">
			$(function() {
				mui.init();
				var token = localStorage.getItem("token");
				var orderId = getUrlParam("orderId");

				var vueData = {
					addrList: [], //收货地址
				};
				new Vue({
					el: '#J_el',
					data: vueData,
					methods: {
						secDangqian: secDangqian, //选择当前地址
					}
				});

				//获取收货地址
				getList()

				function getList() {
					$.ajax({
						url: API_SERVER + "UserAddress/UserAddressList",
						data: {
							token: token
						},
						success: function(data) {
							log(data)
							if(data.code == 200) {
								vueData.addrList = data.data;
							} else {
								mui.toast(data.message)
							}
						}
					})
				}

				//选择当前地址
				function secDangqian(index, sheng, shi, id) {
					$('.selectIcon').removeClass('selectIconColor');
					$('.selectIcon').eq(index).addClass('selectIconColor');
					$("#ssq").val(sheng + shi);
					$("#ssq").attr("dataVal", id);
					$("#ssq").attr("secFlag", 1);
				}

				//时间选择
				mui('body').on('tap', '.secTime', function() {
					document.activeElement.blur();

					//手动设置起止时间
					var dtpicker = new mui.DtPicker({
						type: "datetime", //设置日历初始视图模式 
						beginDate: new Date(), //设置开始日期  --月份：索引是0；
						endDate: new Date(2020, 10, 20), //设置结束日期 
						labels: ['年', '月', '日', '时', '分'], //设置默认标签区域提示语 
					});
					dtpicker.show(function(e) {
						log(e)
						$('#time').val(e.text);
						$("#time").attr("dataVal", e.y.text + '/' + e.m.text + '/' + e.d.text + ' ' + e.h.text + ':' + e.i.text + ':' + '00');
						$("#time").attr("secDate", 1);
					});
				})

				/*确定预约*/
				var isClick = false;
				mui('body').on('tap', '.footerBox', function() {
					var secFlag = $("#ssq").attr("secFlag");
					var secDate = $("#time").attr("secDate");

					var data = {
						token: token,
						order_id: orderId,
						address_id: $("#ssq").attr("dataVal"),
						day: Math.round((new Date($("#time").attr("dataVal")).getTime()) / 1000),
						remark: $("#remark").val() || "无备注信息！！！"
					}

					var isOk = validate(
						[secFlag, [function() {
								return secFlag == "1"
							}],
							['请选择收货地址']
						], [secDate, [function() {
								return secDate == "1"
							}],
							['请选择预约时间']
						]

					);
					if(!isOk) return;
					if(isClick) return;
					isClick = true;

					$.ajax({
						url: API_SERVER + "Yuyue/ExpressReservation",
						data: data,
						success: function(data) {
							log(data)
							if(data.code == 200) {
								$(".modalTwo").css({
									"display": "block"
								}) //预约成功弹出模态窗
							} else {
								mui.toast(data.message);
								isClick = false;
							}
						},
						error: function(data) {
							isClick = false;
							mui.toast(data.message);
						}
					})
				})

				/*新增地址*/
				mui('body').on('tap', '.goToAdd', function() {
					mui.openWindow({
						url: '../personalCenter/addressEdit.html?secPage=1&addressId=0&goTo=2&orderId=' + orderId,
					})
				})
				mui('body').on('tap', '.callBackHomePage', function() { //返回首页
					mui.openWindow({
						url: BASE_SERVER + "wechat_html/page/homePage/homePage.html",
					})
				})
			})
		</script>
	</body>

</html>