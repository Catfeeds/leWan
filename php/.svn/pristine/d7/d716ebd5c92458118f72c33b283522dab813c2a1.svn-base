<!doctype html>
<html>

	<head>
		<meta charset="UTF-8">
		<title>好友</title>
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<link href="../../css/mui.min.css" rel="stylesheet" />
		<link href="../../css/leWan.css" rel="stylesheet" />
		<link href="../../plugins/swiper-4.3.3.min.css" rel="stylesheet" />
		<link href="../../fonts/iconfont.css" rel="stylesheet" />
		<style type="text/css">
			body {
				padding: 0;
				margin: 0;
			}
			/*头部*/
			
			.kongbai{
				height: 0.266rem;
				background-color: #ECEFFC !important;
			}
			.header {
				height: 2.4rem;
				background-color: #FFFFFF;
			}
			
			.header>div {
				float: left;
			}
			
			.headerName {
				width: 2.666rem;
				height: 1rem;
				line-height: 1rem;
				font-size: 0.426rem;
				color: #B5894D;
				text-align: center;
				background-size: 100% 100%;
				background-repeat: no-repeat;
				margin: 0.693rem 0 0 0.826rem;
			}
			
			.headerNum {
				font-size: 0.506rem;
				color: #E1B872;
				font-weight: bold;
				padding-bottom: 0.15rem;
				border-bottom: 2px solid #F2F2F2;
				margin: 0.933rem 0 0 0.533rem;
			}
			
			.adminExplain {
				font-size: 0.373rem;
				color: #999999;
				font-weight: bold;
				float: right;
				margin: 0.533rem 0.32rem 0 0;
			}
			/*列表*/
			.mui-table-view:before,
			.mui-table-view:after {
				height: 0;
			}
			
			.content img {
				width: 1.333rem;
				height: 1.333rem;
				border-radius: 0.666rem;
				display: inline-block;
				vertical-align: middle;
			}
			
			.content>ul>li>span {
				display: inline-block;
				vertical-align: middle;
			}
			
			.userName {
				font-size: 0.533rem;
				color: #333333;
				font-weight: bold;
				margin-left: 0.266rem;
			}
			
			.userLevel {
				font-size: 0.346rem;
				color: #999999;
				font-weight: bold;
				margin-left: 0.266rem;
			}
			
			.userNum {
				font-size: 0.346rem;
				color: #999999;
				font-weight: 500;
				float: right;
				margin-right: 0.4rem;
				line-height: 1.333rem;
			}
		</style>
	</head>

	<body>
		<div class="mui-scroll-wrapper" id="refreshContainer">
			<div class="mui-scroll">
				<div id="J_el">
					<div class="header">
						<div class="headerName" style="background-image: url(../../img/personalCenter/equity2.png);">好友</div>
						<div class="headerNum">共{{ totalNum }}人</div>
						<span class="adminExplain">客户说明？</span>
					</div>
					<div class="kongbai"></div>
					<div class="content">
						<ul class="mui-table-view" v-if="clientList.length">
							<li class="mui-table-view-cell" v-for="items in clientList">
								<img :src="items.avatar" alt="" />
								<span class="userName">{{ items.nickname }}</span>
								<span class="userLevel">{{ items.level }}</span>
								<span class="userNum">已购{{ items.order_count }}单</span>
							</li>

						</ul>
						<!--空状态时-->
						<div class="lw-empty" style="display: block;" v-else>
							<div class="lw-empty-box">
								<div class="lw-empty-flex">
									<img src="../../img/personalCenter/nullList2.png" alt="" class="lw-empty-img" />
									<div class="lw-empty-test">暂无好友 去推广产品吧！</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<script src="../../plugins/flexible.js"></script>
		<script src="../../plugins/jquery-2.1.4.js"></script>
		<script src="../../plugins/vue.js"></script>
		<script src="../../js/mui.min.js"></script>
		<script src="../../plugins/swiper-4.3.3.min.js"></script>
		<script src="../../plugins/serverApi.js"></script>
		<script type="text/javascript">
			$(function() {
				mui.init({
					pullRefresh: {
						container: '#refreshContainer', //下拉刷新容器标识，querySelector能定位的css选择器均可，比如：id、.class等
						up: {
							height: 50,
							auto: false,
							contentnomore: '没有更多数据了',
							contentrefresh: '正在加载...',
							callback: function() {
								setTimeout(function() {
									getList();
								}, 1000);
							}
						}
					}
				});

				//判断直属好友还是全部好友
				var dataNum = getUrlParam("dataNum");
				var friendType; //好友类型
				if(dataNum === "0") { //直属好友
					log("直属好友");
					document.title = '直属好友';
					friendType = 3;
					$(".headerName").text("直属好友");
				} else { //全部好友
					log("全部好友");
					document.title = '全部好友';
					friendType = 1;
					$(".headerName").text("全部好友")
				}

				var token = localStorage.getItem("token");

				var pageData = {
					page: 1,
					psize: 10
				}
				var vueData = {
					clientList: [],
					totalNum: 0
				}
				new Vue({
					el: "#J_el",
					data: vueData,
					methods: {}
				})

				getList(true);

				function getList(empty) {
					$.ajax({
						url: API_SERVER + "User/UserFriendsList",
						data: {
							token: token,
							type: friendType, //用户类型：1（全部好友）;2(我的客户)；3(我的直属好友)
							page: pageData.page, //页码（默认第一页,默认1）
							psize: pageData.psize //每页数量（默认10条）
						},
						success: function(data) {
							log(data)
							if(data.code == 200) {
								var lists = data.data.list;
								vueData.totalNum = data.data.count;
								empty && vueData.clientList.splice(0);
								for(var i = 0; i < lists.length; i++) {
									vueData.clientList.push(lists[i]);
								}
								pageData.page++;
								var pullRefresh = mui('#refreshContainer').pullRefresh();
								pullRefresh && pullRefresh.endPulldownToRefresh && pullRefresh.endPulldownToRefresh();
								pullRefresh && pullRefresh.refresh && pullRefresh.refresh(true);
								pullRefresh && pullRefresh.endPullupToRefresh && pullRefresh.endPullupToRefresh(lists.length < pageData.psize);
							} else {
								mui.toast(data.message)
							}
						}
					});
				}
			})
		</script>
	</body>

</html>