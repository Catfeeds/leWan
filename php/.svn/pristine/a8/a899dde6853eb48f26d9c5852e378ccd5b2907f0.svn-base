<!doctype html>
<html>

	<head>
		<meta charset="UTF-8">
		<title>我的银行卡</title>
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<link href="../../css/mui.min.css" rel="stylesheet" />
		<link href="../../css/leWan.css" rel="stylesheet" />
		<link href="../../plugins/swiper-4.3.3.min.css" rel="stylesheet" />
		<link href="../../fonts/iconfont.css" rel="stylesheet" />
		<style type="text/css">
			body {
				padding: 0;
				margin: 0;
			}
			/*content*/
			.cardBox{
				overflow: hidden;
				background-color: #FFFFFF;
				text-align: center;
			}
			
			.cardList{
				display: inline-block;
				width: 8.986rem;
				height: 2.826rem;
				border-radius: 0.2rem;
				background-repeat: no-repeat;
				background-size: 100% 100%;
				margin-top: 0.266rem;
				position: relative;
			}
			
			
			.bankName{
				position: absolute;
				left: 1.76rem;
				top: 0.426rem;
				font-size: 0.373rem;
				color: #FFFFFF;
				font-weight: 800;
			}
			.bankLimit{
				position: absolute;
				left: 1.76rem;
				top: 0.906rem;
				font-size: 0.32rem;
				color: #CCCCCC;
				font-weight: 500;
			}
			.bankNumber{
				position: absolute;
				left: 0.586rem;
				top: 1.9rem;
				font-size: 0.586rem;
				color: #FFFFFF;
				font-weight: 800;
			}
			
			
			
			
			/*footer*/
			.footerBtn{
				width: 100%;
				height: 1.386rem;
				line-height: 1.386rem;
				position: fixed;
				left: 0;
				bottom: 0;
				text-align: center;
				font-size: 0.426rem;
				color: #FFFFFF;
				background: linear-gradient(to right, #EEEEEE 0%, #D8D8D8 100%);
			}
			
		</style>
	</head>

	<body>
		<div class="" id="J_el">
			<div class="content">
				<div class="cardBox" v-if="cardList.length">
					<div class="cardList" v-for="items in cardList" 
						:style="{'backgroundImage': 'url(' + items.icon + ')'}">
						<div class="bankName">{{ items.name }}</div>
						<div class="bankNumber">{{ items.number }}</div>
					</div>
					
				</div>
				<!--空状态时-->
				<div class="lw-empty" style="display: block;" v-else>
					<div class="lw-empty-box">
						<div class="lw-empty-flex">
							<img src="../../img/personalCenter/nullList2.png" alt="" class="lw-empty-img" />
							<div class="lw-empty-test">暂无银行卡 去新增银行卡吧！</div>
						</div>
					</div>
				</div>
				<div class="footerBtn" @tap="addCard()">
					<i class="iconfont icon-tianjia"></i>
					<span>添加银行卡</span>
				</div>
			</div>
		</div>
		<script src="../../plugins/flexible.js"></script>
		<script src="../../plugins/jquery-2.1.4.js"></script>
		<script src="../../plugins/clipboard.js"></script>
		<script src="../../plugins/vue.js"></script>
		<script src="../../js/mui.min.js"></script>
		<script src="../../plugins/swiper-4.3.3.min.js"></script>
		<script src="../../plugins/serverApi.js"></script>
		<script type="text/javascript">
			$(function() {
				var token = localStorage.getItem("token");
				var vueData = {
					cardList: []
				};
				new Vue({
					el: '#J_el',
					data: vueData,
					methods: {
						addCard: addCard
					}
				});
				
				getList()
				function getList() {
					$.ajax({
						url: API_SERVER + "Userbank/UserBankAll",
						data: {token: token},
						success: function(data) {
							log(data)
							if(data.code == 200) {
								vueData.cardList = data.data;
							} else {
								mui.toast(data.message)
							}
						}
					})
				}

				function addCard(){
					mui.openWindow({
						url:"addBankCard.html"
					})
				}
			})
		</script>
	</body>

</html>