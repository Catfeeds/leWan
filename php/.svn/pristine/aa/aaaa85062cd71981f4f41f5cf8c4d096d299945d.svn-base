<br class="page">
<div class="layui-field-title"></div>

    <div class="l" >
        <form class="layui-form" action="{:url('Userauth/AuthList')}">
            <input type="text" value="{$type}" hidden="hidden">

            <div class="layui-form-item col-sm-12">
                <div class="layui-input-block ">
                    <input type="text" name="title"  placeholder="请输入用户昵称/联系电话/真实姓名"  class="layui-input" value="{$query['title']}">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">审核时间:</label>
                <div class="layui-input-inline">
                    <input class="layui-input" name="trialstarttime" value="{$query['trialstarttime']}" placeholder="开始时间" onclick="layui.laydate({elem: this, istime: true, format: 'YYYY-MM-DD hh:mm:ss'})">
                </div>
                <div class="layui-input-inline">
                    <input class="layui-input" name="trialendtime" value="{$query['trialendtime']}" placeholder="结束时间" onclick="layui.laydate({elem: this, istime: true, format: 'YYYY-MM-DD hh:mm:ss'})">
                </div>

                <label class="layui-form-label">认证时间:</label>
                <div class="layui-input-inline">
                    <input class="layui-input" name="starttime" value="{$query['starttime']}" placeholder="开始时间" onclick="layui.laydate({elem: this, istime: true, format: 'YYYY-MM-DD hh:mm:ss'})">
                </div>
                <div class="layui-input-inline">
                    <input class="layui-input" name="endtime" value="{$query['endtime']}" placeholder="结束时间" onclick="layui.laydate({elem: this, istime: true, format: 'YYYY-MM-DD hh:mm:ss'})">
                </div>

                <span class="input-group-btn">
                      <button type="submit" class="layui-btn "><i class="fa fa-search"></i> 搜索</button>
                </span>

            </div>
        </form>
    </div>

    <div class="clear"></div>
    <div class="layui-field-title"></div>

    <div class="layui-input-block">
        <div class="layui-btn-group search">
            <a href="{:url('Userauth/AuthList',array('type'=>0))}"><button class="layui-btn layui-btn-warm">认证申请 ({$auditing})</button></a>
            <a href="{:url('Userauth/AuthList',array('type'=>1))}"><button class="layui-btn layui-btn-danger">认证失败 ({$fail})</button></a>
            <a href="{:url('Userauth/AuthList',array('type'=>2))}"><button class="layui-btn">认证通过 ({$adopt})</button></a>
        </div>
    </div>

    <div class="clear"></div>
    <!-- 模板样式 -->

    <div class="layui-form">
        <if condition="!empty($data['list'])">
            <table class="layui-table" lay-skin="line" >
                <thead>
                <tr>
                    <th >用户头像</th>
                    <th >用户昵称</th>
                    <th >联系电话</th>
                    <th width="200px;">真实姓名</th>
                    <th >审核状态</th>
                    <th >审核时间</th>
                    <th >认证时间</th>
                    <th width="100">操作</th>
                </tr>
                </thead>

                <tbody>
                <volist name="$data['list']" id="val">
                    <tr class="">
                        <td >
                            <img src="{$val['avatar']}" >
                        </td>
                        <td >{$val['nickname']}</td>
                        <td >{$val['mobile']}</td>
                        <td>{$val['truename']}</td>
                        <td>
                            <if condition="$val['status'] eq 2">
                                    <label class="layui-badge layui-bg-green">认证成功</label>
                                <elseif condition="$val['status'] eq 1" />
                                    <label class="layui-badge layui-bg-danger">认证驳回</label>
                                <else />
                                    <label class="layui-badge layui-bg-gray">暂未认证</label>
                            </if>
                        </td>
                        <td >
                            <if condition="!empty($val['uptime'])">
                                {$val['uptime']|date="Y-m-d H:i",###}
                            </if>
                        </td>
                        <td >{$val['addtime']|date="Y-m-d H:i",###}</td>
                        <td >
                            <div class="layui-btn-group">
                                <a href="javascript:openWindow('认证详情', '{:url(\'system/Userauth/AuthData\', array(\'id\'=>$val[\'auth_id\']))}', '35%', '80%')" class="layui-btn layui-btn-sm" title="认证详情">
                                    <i class="layui-icon"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                </volist>
                </tbody>
            </table>
            <else />
                <div class="layui-field-title"></div>
                <div class="layui-form-item">
                    <div class="layui-input-block">
                        暂无认证数据w(ﾟДﾟ)w
                    </div>
                </div>
        </if>

        <div class="tabletool">
            <!-- 分页工具 -->
            <div id="limitpage" class="r"></div>
            <div class="clear"></div>
        </div>

    </div>

</div>

<script>

</script>