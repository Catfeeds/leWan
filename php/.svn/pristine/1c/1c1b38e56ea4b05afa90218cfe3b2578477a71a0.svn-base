<!doctype html>
<html>

	<head>
		<meta charset="UTF-8">
		<title>订单支付</title>
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<link href="../../css/mui.min.css" rel="stylesheet" />
		<link href="../../css/leWan.css" rel="stylesheet" />
		<link href="../../plugins/swiper-4.3.3.min.css" rel="stylesheet" />
		<link href="../../fonts/iconfont.css" rel="stylesheet" />
		<style type="text/css">
			body {
				padding: 0;
				margin: 0
			}
			/*页头*/
			
			.headerBox {
				background-color: #FFFFFF;
				overflow: hidden;
			}
			
			.cardBox {
				width: 8.746rem;
				height: 3.413rem;
				margin: 0.506rem 0.613rem;
				border-radius: 5px;
				box-shadow: #999 0px 0px 10px;
				overflow: hidden;
				position: relative;
			}
			
			.cardBox1 {
				font-size: 0.373rem;
				overflow: hidden;
				text-overflow: ellipsis;
				white-space: nowrap;
				margin: 0.533rem 0.1rem;
			}
			
			.cardBox1>strong {
				font-size: 0.506rem;
				color: #333333;
			}
			
			.cardBox2 {
				padding-left: 0.426rem;
			}
			
			.realityPrice {
				font-size: 0.586rem;
				color: #333333;
			}
			
			.originalCost {
				font-size: 0.373rem;
				color: #999999;
				text-decoration: line-through;
				margin-left: 0.4rem;
			}
			
			.cardBox3 {
				position: absolute;
				bottom: 0;
				background-color: #E1B872;
				color: #FFFFFF;
				text-align: center;
				width: 100%;
				height: 0.8rem;
				line-height: 0.8rem;
			}
			
			.content {
				margin-top: 0.266rem;
			}
			/*列表行间距调节*/
			
			.mui-input-row {
				height: 1.4rem !important;
				line-height: 1.4rem !important;
			}
			
			.mui-input-row label {
				line-height: 2;
			}
			
			.mui-input-row input {
				line-height: 2;
				height: auto;
			}
			
			.numBox {
				float: right;
				width: 65%;
				height: 1.4rem;
				display: flex;
				display: -webkit-flex;
				justify-content: center;
				-webkit-justify-content: center;
				align-items: center;
				-webkit-align-items: center;
			}
			#ssq{
				padding-right: 1rem;
			}
			/*加减按钮*/
			
			.mui-numbox {
				border: none;
				background-color: #FFFFFF;
				width: 140px;
			}
			
			.mui-numbox>div {
				background-color: #F3F1F1 !important;
			}
			
			.mui-numbox .mui-btn-numbox-minus,
			.mui-numbox .mui-numbox-btn-minus {
				left: 10px;
				border-top-left-radius: 50% !important;
				border-bottom-left-radius: 50% !important;
			}
			
			.mui-numbox .mui-btn-numbox-plus,
			.mui-numbox .mui-numbox-btn-plus {
				right: 10px;
				border-top-right-radius: 50% !important;
				border-bottom-right-radius: 50% !important;
			}
			
			.mui-numbox input {
				background-color: #F3F1F1 !important;
			}
			
			.mui-numbox-btn-minus i {
				color: #ADADAD;
				font-size: 34px;
				line-height: 1.1;
				float: left;
			}
			
			.mui-numbox-btn-plus i {
				color: #ADADAD;
				font-size: 34px;
				line-height: 1.1;
				float: right;
			}
			
			.kuaidiNumber{
				width: 100%;
				float: left;
				font-size: 0.426rem;
				color: #333333;
			}
			
			.isClick {
				color: #F77917 !important;
			}
			.isClickFalse {
				color: #999999 !important;
			}
			
			.mui-input-row label {
				font-size: 0.426rem;
				color: #333333;
				font-weight: bold;
			}
			
			.mui-input-row input {
				font-size: 0.426rem;
			}
			
			.postscript label {
				font-size: 0.426rem;
				color: #333333;
				font-weight: bold;
				line-height: 1.1;
				float: left;
				width: 35%;
				padding: 11px 15px;
			}
			
			.postscript textarea {
				width: 90%;
				margin: 0 5% 15px 5%;
				background-color: #F2F2F2;
				padding: 5px 10px;
				border-radius: 8px;
				border: 1px solid #e7e7e7;
			}
			/*选择地址*/
			.secAddressBox {
				position: relative;
			}
			
			.mui-input-row img {
				position: absolute;
				right: 3%;
				width: 6%;
				padding: 0.6rem 0;
				top: 0;
				bottom: 0;
				margin: auto;
			}
			/*底部状态栏*/
			
			.footer {
				height: 1.68rem;
				border-top: 1px solid #F2F2F2;
				box-shadow: 0 -1px 10px 3px #e7e7e7;
				position: fixed;
				bottom: 0;
				width: 100%;
				z-index: 100;
			}
			
			.footer>div {
				display: inline-block;
				float: left;
				text-align: center;
				line-height: 1.68rem;
			}
			
			.footer>div:nth-child(1) {
				width: 35%;
				background-color: #FFFFFF;
			}
			
			.footer p:nth-child(1) {
				font-size: 0.64rem;
				color: #333333;
				height: 1rem;
				width: 100%;
				line-height: 1rem;
			}
			
			.footer p:nth-child(2) {
				font-size: 0.373rem;
				color: #999999;
				text-decoration: line-through;
				width: 100%;
				height: 0.68rem;
				line-height: 0.68rem;
			}
			
			.footer>div:nth-child(2) {
				width: 30%;
				font-size: 0.373rem;
				color: #333333;
				background-color: #FFFFFF;
			}
			
			.footer i {
				font-size: 0.5rem;
			}
			
			.footer>div:nth-child(3) {
				width: 35%;
				color: #FFFFFF;
				background-color: #E1B872;
				font-size: 0.533rem;
				font-weight: 800;
			}
			/*订单明细弹窗*/
			
			.mui-backdrop {
				z-index: 50;
				background-color: rgba(0, 0, 0, .6);
			}
			
			.motaiBox {
				display: none;
			}
			
			.orderDetailsView {
				position: fixed;
				bottom: 1.68rem;
				z-index: 80;
				width: 100%;
			}
			
			.orderDetailsView p {
				font-size: 0.48rem;
				color: #333333;
				font-weight: bold;
			}
			
			.orderDetailsView div {
				font-size: 0.4rem;
				color: #333333;
				font-weight: 500;
			}
			/*选择地址模态窗*/
			.mui-modal{
				background-color: rgba(0,0,0,0.5);
			}
			.moHeader{
				height: 1rem;
				line-height: 1rem;
				text-align: center;
				color: #333333;
				font-size: 0.426rem;
				font-weight: 500;
				background-color: #FFFFFF;
				border-bottom: 1px solid #F2F2F2;
				font-weight: 800;
				border-top-right-radius: 0.2rem;
				border-top-left-radius: 0.2rem;
			}
			.modalBox{
				margin-top: 50vh;
				height: 50vh;
				background-color: #FFFFFF;
				border-top-right-radius: 0.2rem;
				border-top-left-radius: 0.2rem;
			}
			.addressSecBox{
				height: 30vh;
				overflow-y: scroll;
			}
			
			.BuyNow{
				position: fixed;
				bottom: 0;
				width: 100%;
				height: 1.226rem;
				line-height: 1.226rem;
				text-align: center;
				font-size: 0.48rem;
				color: #FFFFFF;
				font-weight: bold;
				background-color: #E1B872;
			}
			
			.lw-empty,.lw-empty-box{
				height: 30vh;
			}
			.spaceBox{
				height: 1rem;
			}
			.nowAddBox {
				position: absolute;
				bottom: 0.2rem;
				width: 100%;
				text-align: center;
				z-index: 200;
			}
			
			.nowAdd {
				display: inline-block;
				width: 6.56rem;
				/*height: 1.3rem;*/
				line-height: 1.333rem;
				text-align: center;
				background: linear-gradient(to right, #FF791C 0%, #DC2609 100%);
				border-radius: 0.666rem;
				color: #FFFFFF;
				font-size: 0.426rem;
				font-weight: 500;
				box-shadow: 0 0 8px 1px rgba(0, 0, 0, 0.3);
			}
			.userMes {
				font-size: 0.453rem;
				color: #333333;
				font-weight: 600;
			}
			
			.userMes>span:nth-child(2) {
				margin-left: 1.013rem;
				font-weight: 600;
			}
			.addressMes {
				margin-top: 0.293rem;
			}
			
			.addressMes>span:nth-child(1) {
				display: inline-block;
				width: 90%;
				float: left;
				font-size: 0.346rem;
				color: #999999;
				white-space: nowrap;
				overflow: hidden;
				text-overflow: ellipsis;
			}
			
			.mui-table-view:after,
			.mui-table-view:before {
				height: 0;
				background-color: #FFFFFF !important;
			}
			.addaddress{
				text-align: center;
				font-size: 0.346rem;
				color: #999999;
			}
			.addaddress i{
				font-size: 0.3rem;
				margin-right: 0.15rem;
				color: #999999;
			}
			.addressBox{
				width: 90%;
				float: left;
			}
			.addressBtn{
				float: left;
				width: 10%;
				text-align: center;
				margin-top: 0.3rem;
				color: #999999;
			}
			.addressBtn i{
				font-size: 0.6rem;
			}
			.addressSecBox{
				height: 30vh;
				overflow-y: scroll;
			}
			.selectIconColor{
				color: #FC9929;
			}
		</style>
	</head>

	<body>
		<div id="J_el" v-cloak>
			<div v-if="showPage">
				<div class="headerBox">
					<div class="cardBox">
						<div class="cardBox1"><strong>{{ proDetail.product_name }}</strong></div>
						<div class="cardBox2">
							<span class="realityPrice">￥{{ proDetail.price_sale }}</span>
							<span class="originalCost">￥{{ proDetail.price_market }}</span>
						</div>
						<div class="cardBox3">商品有效期限：{{ getDateTime(proDetail.product_startusetime,'Y-MM-dd') }} 至 {{ getDateTime(proDetail.product_endusetime,'Y-MM-dd') }}</div>
					</div>
				</div>

				<div class="content">
					<form class="mui-input-group">
						<div class="mui-input-row">
							<label>购买数量：</label>
							<div class="numBox">
								<!--TODO-->
								<div v-if="proDetail.product_returnall != 1" class="mui-numbox" data-numbox-step='1' data-numbox-min='0' :data-numbox-max='proDetail.product_sku'>
									<div class="jia mui-btn mui-numbox-btn-minus" ><i :class="{'isClick': buyNum>1}" class="iconfont icon-jian"></i></div>
									<input class="mui-numbox-input" v-model="buyNum" id="buyNumber" type="number" />
									<div class="jian mui-btn mui-numbox-btn-plus"><i :class="{'isClick': buyNum<proDetail.product_sku}" class="iconfont icon-wuuiconxiangjifangda"></i></div>
								</div>
								<div v-else-if="proDetail.product_returnall == 1" class="kuaidiNumber">1</div>
							</div>
						</div>
						<div class="mui-input-row">
							<label>联系人名：</label>
							<input type="text" v-model="concat" maxlength="6" placeholder="请输入联系人">
						</div>
						<div class="mui-input-row">
							<label>联系电话：</label>
							<input class="advertisingTitle1" type="number" v-model="mobile" oninput="if(value.length>11)value=value.slice(0,11)" maxlength="11" placeholder="请输入您的联系电话">
						</div>
						<div v-if="proDetail.product_isexpress==2 && proDetail.product_reservation == 2" class="mui-input-row secAddressBox">
							<label>收货地址:</label>
							<input type="text" id="ssq" secFlag="0" disabled="disabled" placeholder="请选择收货地址">
							<a href="#modal"><img class="secAddress" src="../../img/personalCenter/adressEdit.png" /></a>
						</div>
						<div class="postscript">
							<label>备注信息：</label>
							<textarea v-model="remark" rows="4" maxlength="100" placeholder="请输入备注信息"></textarea>
						</div>

					</form>
				</div>
				<!--底部按钮-->
				<div class="footer">
					<div>
						<p class="truePrice">￥{{ (proDetail.price_sale*buyNum).toFixed(2) }}</p>
						<p class="">￥{{ (proDetail.price_market*buyNum).toFixed(2) }}</p>
					</div>
					<div id="orderDetails">订单明细 <i class="mui-icon mui-icon-arrowup"></i></div>
					<div id="PayNow" @tap.stop="BuyNow">立即支付</div>
				</div>
				<!--订单明细-->
				<div class="motaiBox">
					<div class="orderDetailsView">
						<ul class="mui-table-view">
							<li class="mui-table-view-cell">
								<p>商品有效期</p>
								<div>{{ getDateTime(proDetail.product_startusetime,'Y-MM-dd') }} 至 {{ getDateTime(proDetail.product_endusetime,'Y-MM-dd') }}</div>
							</li>
							<li class="mui-table-view-cell">
								<p>实际支付</p>
								<div>¥{{proDetail.price_sale}}x{{buyNum}}份</div>
							</li>
						</ul>
					</div>
				</div>
				<!--地址选择-->
				<div id="modal" class="mui-modal">
					<div class="modalBox">
						<header class="moHeader">收货地址选择</header>
						<ul class="mui-table-view addressSecBox" v-if="addrList.length">
							<li class="mui-table-view-cell" v-for="(items,index) in addrList" @tap="secDangqian(index,items.ssq,items.address,items.address_id)">
								<div class="addressBox">
									<div class="userMes">
										<span>{{ items.contact }}</span>
										<span>{{ items.mobile }}</span>
									</div>
									<div class="addressMes">
										<span>{{ items.ssq }}{{ items.address }}</span>
									</div>
								</div>
								<div class="addressBtn" v-bind:dataVal="items.address_id">
									<i class="selectIcon iconfont icon-xuanzhong"></i>
								</div>
							</li>
							<li class="mui-table-view-cell addaddress">
								<span class="goToAdd"><i class="iconfont icon-tianjia"></i>新增收货地址</span>
							</li>
						</ul>
						
						<!--空状态时-->
						<div class="lw-empty" style="display: block;" v-else>
							<div class="lw-empty-box">
								<div class="lw-empty-flex">
									<div class="spaceBox"></div>
									<img src="../../img/personalCenter/nullList2.png" alt="" class="lw-empty-img" />
									<!--<div class="lw-empty-test">暂无地址 去新增地址吧！</div>-->
								</div>
							</div>
						</div>
						<div v-if="addrList.length" class="nowAddBox">
							<a href="#modal">
								<div class="nowAdd">确定</div>
							</a>
						</div>
						<div v-else class="nowAddBox">
							<div class="nowAdd goToAdd">新增收货地址</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<script src="../../plugins/flexible.js"></script>
		<script type="text/javascript" src="http://res.wx.qq.com/open/js/jweixin-1.4.0.js"></script>
		<script src="../../plugins/jquery-2.1.4.js"></script>
		<script src="../../plugins/vue.js"></script>
		<script src="../../js/mui.min.js"></script>
		<script src="../../plugins/swiper-4.3.3.min.js"></script>
		<script src="../../plugins/serverApi.js"></script>
		<script type="text/javascript">
			$(function() {
				var token = localStorage.getItem("token");
				var productId = getUrlParam("productId"); //商品id
				var priceId = getUrlParam("priceId"); //价格id

				var vueData = {
					showPage: false,
					proDetail: {}, //商品详情
					buyNum: 1,
					concat: '', //人名
					mobile: '', //手机号
					remark: '', //备注
					addrList:[],//收货地址
				};
				new Vue({
					el: '#J_el',
					data: vueData,
					methods: {
						BuyNow: BuyNow, //立刻购买
						secDangqian:secDangqian,	//选择当前地址
					},
					mounted: function() {
						
					},
					updated: function() {
					}
				});
				
				//获取收货地址
				getList()

				function getList() {
					$.ajax({
						url: API_SERVER + "UserAddress/UserAddressList",
						data: {token: token},
						success: function(data) {
							log(data)
							if(data.code == 200) {
								vueData.addrList = data.data;
							} else {
								mui.toast(data.message)
							}
						}
					})
				}
				//选择当前地址
				function secDangqian(index,sheng,shi,id){
					$('.selectIcon').removeClass('selectIconColor');
					$('.selectIcon').eq(index).addClass('selectIconColor');
					$("#ssq").val(sheng+shi);
					$("#ssq").attr("dataVal",id);
					$("#ssq").attr("secFlag",1);
				}
				//商品详情
				nowPayment();

				function nowPayment() {
					var data = {
						token: token,
						product_id: productId,
						price_id: priceId
					};
					$.ajax({
						url: API_SERVER + 'Mall/confirmPay',
						async: false,
						data: data,
						success: function(data) {
							log(data)
							if(data.code == 200) {
								vueData.proDetail = data.data.product;
								vueData.concat = vueData.proDetail.concat || '';
								vueData.mobile = vueData.proDetail.mobile || '';
								vueData.showPage = true;
							}else {
								mui.toast(data.message);
								setTimeout(function(){
									mui.openWindow({
										url: 'homePage.html'
									})
								},1500)
							}
						}
					})
				}
				
				
				//数量监听
				mui('body').on('tap', '.mui-btn', function() {
					log("dianjile ")
					log(mui('.mui-numbox').numbox().getValue())
//					log($('#buyNumber').val())
					vueData.buyNum = mui('.mui-numbox').numbox().getValue();
				});
				
				
				//立即支付
				function BuyNow() {
					log("执行了几次")
					var isOk = validate(
						[vueData.concat, ['required'],
							['姓名不能为空']
						], //持卡人
						[vueData.mobile, ['required', 'phone'],
							['手机号码不能为空', '请输入正确的手机号码']
						] //手机号码
					);
					if(!isOk) return;
					if($("#ssq").attr("secFlag") == 0 && vueData.proDetail.product_isexpress==2 && vueData.proDetail.product_reservation == 2){
						mui.toast("请选择收货地址！")
						return
					}
					var data = {
						token: token ? token : null,
						product_id: productId,
						price_id: priceId,
						address_id: $("#ssq").attr("dataVal")?$("#ssq").attr("dataVal"):null,
						buynum: $('#buyNumber').val(),
						concat: vueData.concat,
						mobile: vueData.mobile,
						remark: vueData.remark ? vueData.remark : "无备注信息",
					}
					var orderNumber; //订单号
					var orderId;	//订单Id
					$.ajax({
						url: API_SERVER + 'Mall/submitOrder', //获取订单号
						async: false,
						data: data,
						success: function(data) {
							log(data)
							if(data.code == 200) {
								orderNumber = data.data.order_no;
								orderId = data.data.order_id;
								$.ajax({
									url: API_SERVER + 'Mall/paynow', //获取微信验签
									async: false,
									data: {
										token: token,
										order_no: orderNumber,
										payway: 1, //支付方式：1微信公众号支付 2支付宝app；3银行卡；4微信APP
									},
									success: function(data) {
										log(data)
										if(data.code == 200) {
											var json = JSON.parse(data.data.jsApiParameters)
											WeixinJSBridge.invoke('getBrandWCPayRequest', {
													"appId": json.appId, //公众号名称，由商户传入
													"timeStamp": json.timeStamp, //时间戳，自1970年以来的秒数
													"nonceStr": json.nonceStr, //随机串
													"package": json.package,
													"signType": json.signType, //微信签名方式：
													"paySign": json.paySign
													//微信签名 
												},
												function(res) {
													WeixinJSBridge.log(res.err_msg);
													//由于官方申明：使用以上方式判断前端返回,微信团队郑重提示：res.err_msg将在用户支付成功后返回    ok，但并不保证它绝对可靠。
													//所以在返回ok的时候，只进行成功提示（即使是支付失败，但是返回是ok）
													if(res.err_msg == "get_brand_wcpay_request:ok") {
														setTimeout(mui.openWindow({
															url: BASE_SERVER + "wechat_html/page/homePage/paySuccessMore.html?orderNumber=" + orderNumber
														}),1500)
													} else {
														mui.openWindow({
															url: BASE_SERVER + "wechat_html/page/reservationCenter/indentDetail.html?orderId=" + orderId
														})
													}
												});
										}else{
											mui.toast(data.message);
										}
									}
								})
							}else{
								mui.toast(data.message);
							}
						}
					})
				}
				
				/*显隐模态框*/
				mui('body').on('tap', '#orderDetails', function() {
					if($(".motaiBox").hasClass("mui-backdrop")) {
						$(".motaiBox").removeClass("mui-backdrop").css({
							"display": "none"
						});
					} else {
						$(".motaiBox").addClass("mui-backdrop").css({
							"display": "block"
						});
					}
				})
				/*新增地址*/
				mui('body').on('tap', '.goToAdd', function() {
					mui.openWindow({
						url: '../personalCenter/addressEdit.html?secPage=1&addressId=0&goTo=1&productId='+productId+'&priceId='+priceId,
					})
				})
			})
		</script>
