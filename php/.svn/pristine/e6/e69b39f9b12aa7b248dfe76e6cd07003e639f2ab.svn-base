/*
 *这是单独为一些公用样式库
 * 
 * */
/*对象选择器 {box-shadow:投影方式 X轴偏移量 Y轴偏移量 阴影模糊半径 阴影扩展半径 阴影颜色}*/
/*渐变色设置background: linear-gradient(to right, #171717 0%,#BCBCBC 100%);*/

a {
	text-decoration: none !important;
}
body{
	margin-bottom: 2rem !important;
	font-family:PingFang-SC-Bold "微软雅黑";
}



/*列表下划线*/
.mui-table-view-cell:after {
    background-color: rgba(0,0,0,0.15) !important;
}

/*底部选项卡*/
.mui-bar-tab i{
	font-size: 24px;
}
.mui-bar-tab .icon-chakantiezishijian{
	font-size: 20px !important;
}
.mui-bar-tab .mui-tab-item{
	color: #CCCCCC;
}
.mui-bar-tab .mui-tab-item.mui-active{
	color: #333333 !important;
	font-weight: bold !important;
}
.mui-bar{
	box-shadow: 0px -1px 10px 1px rgba(0,0,0,0.1);
	background-color: #FFFFFF;
}

/*空状态*/
.lw-empty {
	display: none
}
.lw-empty.lw-empty-bgf {
	background: #fff;
}
.lw-empty-box {
	width: 100%;
	height: 11rem;
	display: flex;
	display: -webkit-flex;
	align-items: center;
	-webkit-align-items: center;
	justify-content: center;
	-webkit-justify-content: center;
}
.lw-empty-box .lw-empty-flex{
	text-align: center;
}
.lw-empty-box .lw-empty-test{
	color: #999999;
	font-size: 0.346rem;
	margin-top: 0.2rem;
}

.lw-empty-box .lw-empty-img {
	width: 3.733rem;
	height: 3.733rem;
}
