            }
            $this->assign('status', $status);
        }
        if($timelimit){//限时
             if ($timelimit == 1){
                 $where['p.product_timelimit'] = 1;
             }else{
                 $where['p.product_timelimit'] = 0;
             }
             $this->assign('timelimit', $timelimit);
