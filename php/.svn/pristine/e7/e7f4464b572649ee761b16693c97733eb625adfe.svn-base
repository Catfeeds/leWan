    public function getProductTag($tagdata, $catedata, $product){
        //标签
        $tagids  = explode(',' , $product['product_tags']);
        $cateids = explode(',' , $product['product_cateids']);
        $tag     = array();
        $cate    = array();
        foreach ($tagids as $a=>$b){
            if(trim($b) != ''){
                $tag[] = $tagdata[$b];
            }
        }
        foreach ($cateids as $a=>$b){
            if(trim($b) != ''){
                $cate[] = $catedata[$b];
            }
        }
        $product['tagstr']  = $tag;
        $product['catestr'] = $cate;
        return $product;
    }

    /**
