/* icon */
.arrow,.cb,.rb{background-image:url('../images/diyicon.png');}
/* select box */
.sb{
	border:solid 1px #d2d2d2;cursor:pointer;background-color:#ffffff;position:relative;float:left;margin:0 10px 0 0;display:inline-block; 
	border-radius:2px;
	-moz-border-radius:2px;
	-webkit-border-radius:2px;
	padding:7px;
}
.sb_active{
	border:solid 1px #d2d2d2;
	/*border-radius:4px 4px 0 0;
	-moz-border-radius:4px 4px 0 0;
	-webkit-border-radius:4px 4px 0 0;*/
}
.sb *{color:#666666;font:normal 12px Song;cursor:pointer;background-color:#fff;}
.sb .opts{border:1px solid #d2d2d2;cursor:pointer;display:none;height:auto;left:0;max-height:121px;overflow-x:hidden;overflow-y:auto;position:absolute;top:40px;width:120px;z-index:9999; font-size:15px;}
.sb > .selected{
	padding:3px 15px 0 14px;overflow:hidden;position:absolute;cursor:pointer;left:0;
	font-size:18px; color:#787878;
	/*border-radius:4px;
	-moz-border-radius:4px;
	-webkit-border-radius:4px;*/
}
.sb .opts a{width:auto;height:30px;line-height:30px;padding:0 14px;cursor:default;outline:none;white-space:nowrap;text-decoration:none;display:block;cursor:pointer;}
.sb .opts a.selected{background:#ffffe1;}
.sb .opts a.none{background:#fff;}
.sb .opts a:hover{background:#ffffe1;cursor:pointer;}
.sb .sb_icon{width:7px;height:4px;position:absolute;cursor:pointer;right:4px;}
.sb .arrow{background-position:-27px -18px; margin-top:6px;}
.sb_active .arrow{background-position:-27px -4px;	}
/* checkbox box */
.cb{width:15px;height:15px;background:url('../images/a/unchecked.jpg') no-repeat;cursor:pointer;line-height:14px; font-size:14px; font-weight:100;padding-left:23px;}
.cb_active{background:url('../images/a/checked.jpg') no-repeat}
/* radio box */

.rb{height:15px; cursor:pointer; background:url('../images/a/option_2.png') no-repeat; height:15px; line-height:14px; font-size:14px; font-weight:bold; padding-left:25px;}
.rb_active{ background:url('../images/a/option_1.png') no-repeat}
.none{display:none;}
.floatleft{float:left; font-size:18px; color:#787878; font-weight:400; margin-top:15px;}