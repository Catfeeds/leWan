<!doctype html>
<html>

	<head>
		<meta charset="UTF-8">
		<title>订单详情</title>
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<link href="../../css/mui.min.css" rel="stylesheet" />
		<link href="../../css/leWan.css" rel="stylesheet" />
		<link href="../../plugins/swiper-4.3.3.min.css" rel="stylesheet" />
		<link href="../../fonts/iconfont.css" rel="stylesheet" />
		<style type="text/css">
			body {
				padding: 0;
				margin: 0;
				background-color: #efeff4
			}
			/*顶部*/
			
			.headerTitle {
				height: 0.7rem;
				line-height: 0.7rem;
				text-align: center;
				font-size: 0.32rem;
				font-weight: 500;
				color: rgba(241, 89, 20, 1);
				background-color: #FFEBC9;
			}
			
			.headerTitle i {
				margin-right: 0.15rem;
			}
			/*头部*/
			
			.headerBox {
				height: 4.586rem;
				background: linear-gradient(to right, #FF791C 0%, #DC2609 100%);
				position: relative;
				overflow: hidden;
			}
			
			.headerHeader {
				width: 100%;
				text-align: center;
				height: 2.293rem;
				background-color: #FFFFFF;
				position: absolute;
				bottom: 0;
				box-shadow: 0 -2px 10px 1px rgba(0, 0, 0, 0.2);
				border-top-left-radius: 0.9rem;
				border-top-right-radius: 0.9rem;
			}
			
			.headerHeader>span {
				font-size: 0.506rem;
				font-weight: bold;
				color: #FFFFFF;
				display: inline-block;
				width: 3.28rem;
				height: 1.573rem;
				line-height: 1.573rem;
				background-color: #E53C0E;
				border-bottom-left-radius: 0.2rem;
				border-bottom-right-radius: 0.2rem;
			}
			
			.headerOne {
				margin-top: 0.466rem;
				margin-left: 0.533rem;
			}
			
			.headerOne>span:nth-child(1) {
				font-size: 0.506rem;
				color: #FFFFFF;
				font-weight: 800;
			}
			
			.headerOne>span:nth-child(2) {
				font-size: 0.32rem;
				color: #F1A89C;
				font-weight: 800;
				float: right;
				margin-right: 0.32rem;
			}
			
			.headerTwo {
				margin-top: 0.1rem;
			}
			
			.headerTwo>span:nth-child(1) {
				display: inline-block;
				width: 0.533rem;
				height: 0.186rem;
				background-color: #FFFFFF;
				margin-left: 0.55rem;
			}
			
			.headerTwo>span:nth-child(2) {
				float: right;
				margin-right: 0.4rem;
				font-weight: 500;
				font-size: 0.4rem;
				color: #f2f2f2;
			}
			/*内容区*/
			
			.mui-table-view:before {
				height: 0;
			}
			
			.mui-table-view-cell {
				height: 1.44rem;
				line-height: 1.44rem;
				padding: 0 15px;
			}
			
			.conName {
				font-size: 0.426rem;
				color: #999999;
				font-weight: bold;
			}
			.consumeCode{
				font-weight: 600;
				color: #E1B872;
			}
			.indentDetails {
				font-size: 0.373rem;
				color: #999999;
				font-weight: bold;
			}
			
			.floatRight {
				float: right;
			}
			
			.conDetails {
				color: #333333;
				font-size: 0.426rem;
			}
			
			.mui-table-view .mui-table-view-cell:first-child {
				height: auto;
				line-height: 0.8rem;
				padding: 12px 15px;
				overflow: hidden;
				text-overflow: ellipsis;
				display: -webkit-box;
				-webkit-line-clamp: 2;
				-webkit-box-orient: vertical;
			}
			
			.mui-table-view .mui-table-view-cell:last-child {
				height: auto;
				padding: 12px 15px;
			}
			
			.lastOne {
				height: 0.586rem;
				line-height: 0.586rem;
			}
			
			.lastOne>span:nth-child(1) {
				width: 0.32rem;
				height: 0.613rem;
				background-color: #EA4E14;
				display: inline-block;
			}
			
			.lastOne>span:nth-child(2) {
				font-size: 0.373rem;
				color: #333333;
				margin-left: 0.2rem;
				font-weight: bold;
			}
			
			.lastTwo {
				font-size: 0.426rem;
				color: #333333;
				font-weight: bold;
				height: 0.586rem;
				line-height: 0.586rem;
				margin-top: 0.506rem;
			}
			
			.lastThree {
				font-size: 0.426rem;
				color: #333333;
				font-weight: bold;
				height: 0.586rem;
				line-height: 0.586rem;
				margin-top: 0.266rem;
			}
			/*关注公众号*/
			
			.attentionNum {
				background-color: #FFFFFF;
				height: 1.466rem;
				line-height: 1.466rem;
				padding-left: 0.56rem;
			}
			
			.attentionNum i {
				font-size: 0.6rem;
				color: #F76E1E;
			}
			
			.attentionNum span {
				width: 2.026rem;
				height: 0.666rem;
				line-height: 0.666rem;
				text-align: center;
				border-radius: 0.333rem;
				display: inline-block;
				font-size: 0.32rem;
				font-weight: 500;
				color: #F76E1E;
				border: 1px solid #F76E1E;
				margin-left: 0.293rem;
			}
			
			/*确认收货成功弹窗*/
			.modalTwo {
				display: none;
				width: 100vw;
				height: 100vh;
				position: fixed;
				top: 0;
				left: 0;
				background-color: rgba(0, 0, 0, 0.7);
				z-index: 10;
			}
			
			.modalBox2 {
				margin: 0 auto;
				margin-top: 3rem;
				width: 7.226rem;
				height: 8.266rem;
				border-radius: 0.2rem;
				overflow: hidden;
				background-color: #FFFFFF;
			}
			
			.reSuccess {
				background-size: 100% 100%;
				background-repeat: no-repeat;
				width: 100%;
				height: 5.946rem;
				overflow: hidden;
			}
			
			.reSuccess>div:nth-child(1) {
				text-align: center;
				margin-top: 4.293rem;
				color: #FFFFFF;
				font-size: 0.506rem;
				font-weight: 800;
			}
			
			.reSuccess>div:nth-child(2) {
				text-align: center;
				margin-top: 0.1rem;
				color: #FFFFFF;
				font-size: 0.373rem;
			}
			
			.callBackBox {
				width: 100%;
				height: 2.32rem;
				display: flex;
				display: -webkit-flex;
				justify-content: center;
				-webkit-justify-content: center;
				align-items: center;
				-webkit-align-items: center;
			}
			
			.callBackHomePage {
				width: 3.173rem;
				height: 1.013rem;
				line-height: 1.013rem;
				text-align: center;
				border: 1px solid #F77917;
				border-radius: 0.56rem;
				color: #F77917;
			}
			/*底部按钮*/
			
			.footerBtnBox {
				width: 100%;
				line-height: 1.333rem;
				height: 1.333rem;
				font-size: 0.506rem;
				text-align: center;
				font-weight: 800;
				position: fixed;
				bottom: -1px;
				z-index: 100;
			}
			
			.footerBtn>div {
				width: 100%;
			}
			/*待付款*/
			
			.footerBtn {
				/*display: none;*/
				color: #FFFFFF;
				background-color: #F77917;
			}
			
		</style>
	</head>

	<body>
		<div id="J_el" v-cloak>
			<div class="">
				<div v-if="indentDetails.status == 1" class="headerTitle">
					<i class="iconfont icon-tongzhi"></i>请在支付时效内完成付款，超时未付款订单将被自动取消
				</div>
				<div class="headerBox">
					<div class="">
						<div class="headerOne">
							<span>{{statusText[indentDetails.status]}}</span>
							<!--<span>退款说明？</span>-->
						</div>
						<div class="headerTwo">
							<span></span>
							<span v-if="indentDetails.status == 1">剩余支付时间：{{countdown(indentDetails.payendtime)}}{{content}}</span>
						</div>
					</div>
					<div class="headerHeader">
						<span>订单信息</span>
					</div>
				</div>

				<div class="content">
					<ul class="mui-table-view">
						<li class="mui-table-view-cell">
							<span class="conName">商品：</span>
							<span class="conDetails">{{indentDetails.product_name}}</span>
						</li>
						<li class="mui-table-view-cell">
							<span class="conName">规格：<span class="conDetails">¥{{indentDetails.price}} * {{indentDetails.num}}份</span></span>
							<!--<span class="conName floatRight">优惠券：<span class="conDetails">已选8折券</span></span>-->
						</li>
						<li class="mui-table-view-cell" v-if="indentDetails.code.length" v-for="(items,index) in indentDetails.code">
							<span class="conName">电子码：<span class="consumeCode">{{items.consume_code}}</span></span>
						</li>
						<li class="mui-table-view-cell">
							<span class="conName">实付：<span>¥{{indentDetails.payamount}}</span></span>
						</li>
						<li class="mui-table-view-cell indentDetails">
							订单编号：{{ indentDetails.order_no }}
						</li>
						<li class="mui-table-view-cell indentDetails">
							有效日期：{{getDateTime(indentDetails.startusetime,"Y-MM-dd")}} 至 {{getDateTime(indentDetails.endusetime,"Y-MM-dd")}}
						</li>
						<li class="mui-table-view-cell indentDetails">
							下单时间：{{getDateTime(indentDetails.addtime,"Y-MM-dd hh:mm:ss")}}
						</li>
						<li class="mui-table-view-cell">
							<div class="lastOne">
								<span></span>
								<span>联系人信息</span>
							</div>
							<div class="lastTwo">联系人：{{ indentDetails.fullname }}</div>
							<div class="lastThree">联系电话：{{ indentDetails.mobile }}</div>
						</li>
					</ul>
					<div class="attentionNum">
						<i class="iconfont icon-star"></i>
						<span>关注公众号</span>
					</div>
				</div>

				<!--底部按钮-->
				<div class="footerBtnBox">
					<div v-if="indentDetails.status == 0"      dataVal='0' class="footerBtn">联系我们</div>
					<div v-else-if="indentDetails.status == 1" dataVal='1' class="footerBtn">立即支付</div>
					<div v-else-if="indentDetails.status == 2" dataVal='2' class="footerBtn">商家发货中</div>
					<div v-else-if="indentDetails.status == 3" dataVal='3' class="footerBtn">去预约</div>
					<div v-else-if="indentDetails.status == 4" dataVal='4' class="footerBtn">确认收货</div>
					<div v-else-if="indentDetails.status == 5" dataVal='5' class="footerBtn">待使用</div>
					<div v-else-if="indentDetails.status == 6" dataVal='6' class="footerBtn">去预约</div>
					<div v-else-if="indentDetails.status == 7" dataVal='7' class="footerBtn">回到首页</div>
					<div v-else-if="indentDetails.status == 8" dataVal='8' class="footerBtn">回到首页</div>
					<div v-else-if="indentDetails.status == 9" dataVal='9' class="footerBtn">回到首页</div>
					<div v-else-if="indentDetails.status == 10" dataVal='10' class="footerBtn">回到首页</div>
				</div>
			</div>
		</div>
		<div class="modalTwo">
			<div class="modalBox2">
				<div class="reSuccess" style="background-image: url(../../img/reservationCenter/subscribe1.png);">
					<div>交易成功</div>
					<div>如有疑问，联系客服</div>
				</div>
				<div class="callBackBox">
					<div class="callBackHomePage">返回首页</div>
				</div>
			</div>
		</div>
		<script src="../../plugins/flexible.js"></script>
		<script src="../../plugins/jquery-2.1.4.js"></script>
		<script src="../../plugins/vue.js"></script>
		<script src="../../js/mui.min.js"></script>
		<script src="../../plugins/swiper-4.3.3.min.js"></script>
		<script src="../../plugins/serverApi.js"></script>
		<script type="text/javascript">
			$(function() {
				var token = localStorage.getItem("token");
				var orderId = getUrlParam("orderId");

				var vueData = {
					indentDetails: {},
					content: '',
					statusText:["已过期","待付款","待发货","待预约","待收货","待使用","待预约","已完成","取消订单","申请退款","申请换货"]
					//0订单过期 1待付款 2待发货 3待预约发货 4待收货 5待使用 6待预约 7已完成 8取消订单 9申请退款 10 申请换货 
				}
				new Vue({
					el: "#J_el",
					data: vueData,
					methods: {
						countdown: countdown
					}
				})
				
				var orderNo ; //订单编号
				
				//获取订单详情
				getList();

				function getList() {
					$.ajax({
						url: API_SERVER + "User/UserOrderInfo",
						data: {
							token: token,
							order_id: orderId
						},
						async: false,
						success: function(data) {
							log(data)
							if(data.code == 200) {
								vueData.indentDetails = data.data;
								orderNo = data.data.order_no
							} else {
								mui.toast(data.message)
							}
						}
					});
				}

				mui("body").on("tap", ".footerBtn", function() {
					var status = $(this).attr('dataVal');
					log(status)
					if(status == 0){	//已过期
						mui.openWindow({
							url: "../personalCenter/contactUs.html"
						})
					}else if(status == 1){	//待付款
						getMoney(orderNo);
					}else if(status == 2){	//待发货
						mui.toast("商家正在备货，请耐心等待！")
					}else if(status == 3 || status == 6){	//待预约
						mui.openWindow({
							url: "reservationCenter.html"
						})
					}else if(status == 4){	//待收货
						sureGetShop()
					}else if(status == 5){	//待使用
						mui.toast("请到商家使用！")
					}else if(status == 7 || status == 8 || status == 9 || status == 10){	//其他状态回首页
						mui.openWindow({
							url: BASE_SERVER + "wechat_html/page/homePage/homePage.html",
						})
					}
				})
				
				function getMoney(orderNo){
					$.ajax({
						url: API_SERVER + 'Mall/paynow', //获取微信验签
						async: false,
						data: {
							token: token,
							order_no: orderNo,
							payway: 1, //支付方式：1微信公众号支付 2支付宝app；3银行卡；4微信APP
						},
						success: function(data) {
							log(data)
							if(data.code == 200) {
								var json = JSON.parse(data.data.jsApiParameters)
								WeixinJSBridge.invoke('getBrandWCPayRequest', {
										"appId": json.appId, //公众号名称，由商户传入
										"timeStamp": json.timeStamp, //时间戳，自1970年以来的秒数
										"nonceStr": json.nonceStr, //随机串
										"package": json.package,
										"signType": json.signType, //微信签名方式：
										"paySign": json.paySign
										//微信签名 
									},
									function(res) {
										WeixinJSBridge.log(res.err_msg);
										//由于官方申明：使用以上方式判断前端返回,微信团队郑重提示：res.err_msg将在用户支付成功后返回    ok，但并不保证它绝对可靠。
										//所以在返回ok的时候，只进行成功提示（即使是支付失败，但是返回是ok）
										if(res.err_msg == "get_brand_wcpay_request:ok") {
											mui.toast(data.message)
											window.location.href = window.location;
										} else {
											alert('支付失败，请重新支付！');
										}
									}
								);
							}else{
								mui.toast(data.message)
							}
						}
					})
				}
				
				function sureGetShop(){
					$.ajax({
						url: API_SERVER + 'User/OrderConfirm',
						async: false,
						data: {
							token: token,
							order_id: orderId
						},
						success: function(data) {
							log(data)
							if(data.code == 200) {
								$(".modalTwo").css({
									"display": "block"
								}) //预约成功打开预约成功模态窗
							}
						}
					})
				}
				
				function countdown(timestamp) {
					var self = this;
					var timer = setInterval(function() {
						var nowTime = new Date().getTime();
						var endTime = timestamp * 1000;
						var t = endTime - nowTime;
						if(t > 0) {
							var day = Math.floor(t / 86400000);
							var hour = Math.floor((t / 3600000) % 24);
							var min = Math.floor((t / 60000) % 60);
							var sec = Math.floor((t / 1000) % 60);
							hour = hour < 10 ? "0" + hour : hour;
							min = min < 10 ? "0" + min : min;
							sec = sec < 10 ? "0" + sec : sec;
							var format = '';
							format = day+"天"+hour+"小时"+min+"分"+sec+"秒";
							self.content = format;
						} else {
							clearInterval(timer);
							self.content = "已结束";
						}
					}, 1000);
				}

				mui('body').on('tap', '.callBackHomePage', function() { //赚回首页
					mui.openWindow({
						url: BASE_SERVER + "wechat_html/page/homePage/homePage.html",
					})
				})

			})
		</script>
	</body>

</html>