<div class="page">

    <div class="l" style="width:90%; ">
        <form class="layui-form search" action="">
            <div class="layui-inline">
                <label class="layui-form-indexlabel">选择月份</label>
                <div class="layui-input-inline">
                    <select name="month">
                        <volist name="monthlist.list" id="val">
                            <option <if condition="$val eq $month">selected</if>  >{$val}</option>
                        </volist>
                    </select>
                </div>
            </div>
            <div class="layui-inline">
                <label class="layui-form-indexlabel">时间范围</label>
                <div class="layui-input-inline">
                    <input class="layui-input" name="starttime" autocomplete="off" value="{$starttime}" placeholder="开始时间" onclick="layui.laydate({elem: this, istime: true, format: 'YYYY-MM-DD'})">
                </div>
                <div class="layui-input-inline">
                    <input class="layui-input" name="endtime" autocomplete="off" value="{$endtime}" placeholder="结束时间" onclick="layui.laydate({elem: this, istime: true, format: 'YYYY-MM-DD'})">
                </div>
            </div>
            <button class="layui-btn layui-btn-small">搜 &nbsp; 索</button>
        </form>
    </div>
    <div class="clear"></div>
    <!-- 模板样式 -->
    <div class="layui-form">
        <table class="layui-table" lay-skin="line" >
            <thead>
            <tr>
                <th width="20" ><input type="checkbox" name="" lay-skin="primary" lay-filter="allChoose"></th>
                <th class="nowrap">操作金额</th>
                <th class="nowrap">操作后余额</th>
                <th class="nowrap">项目</th>
                <th class="nowrap">附属信息</th>
                <th class="nowrap">状态</th>
                <th class="nowrap">时间</th>
            </tr>
            </thead>
            <tbody>
            <volist name="data.list" id="val">
                <tr>
                    <td class="nowrap"><input type="checkbox" name="id[]" value="{$val.merchant_id}" lay-skin="primary" lay-filter="idchoose"></td>
                    <td class="nowrap">{$val.record_amount}</td>
                    <td class="nowrap">{$val.record_balance}</td>
                    <td class="nowrap">{$val.record_action}</td>
                    <td class="nowrap">{$val.record_attach}</td>
                    <td class="nowrap">{$val.record_status}</td>
                    <td class="nowrap">{$val.record_addtime|date='Y-m-d H:i:s',###}</td>

                </tr>
            </volist>
            </tbody>
        </table>

        <div class="tabletool">
            <!-- 分页工具 -->
            <div id="limitpage" class="r"></div>
            <div class="clear"></div>
        </div>

    </div>

</div>
