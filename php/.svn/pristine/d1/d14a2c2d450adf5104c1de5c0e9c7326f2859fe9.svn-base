<link rel="stylesheet" href="/static/layui/css/layui2.0.css" type="text/css">
<div class="page">
<div class="layui-field-title"></div>

<form class="layui-form" action="{:url('Userwithdraw/CashList')}">
    <input type="text" name="status" value="{$status}" hidden="hidden">
    <div class="layui-form-item ">
        <div class="layui-input-block layui-col-sm4">
            <input type="text" name="title"  placeholder="请输入用户昵称/联系电话"  class="layui-input" value="{$query['title']|default=''}">
        </div>

        <label class="layui-form-label">提现时间:</label>
        <div class="layui-input-inline">
            <input class="layui-input" name="starttime" value="{$query['starttime']|default=''}" placeholder="开始时间" onclick="layui.laydate({elem: this, istime: true, format: 'YYYY-MM-DD hh:mm:ss'})">
        </div>
        <div class="layui-input-inline">
            <input class="layui-input" name="endtime" value="{$query['endtime']|default=''}" placeholder="结束时间" onclick="layui.laydate({elem: this, istime: true, format: 'YYYY-MM-DD hh:mm:ss'})">
        </div>

        <span class="input-group-btn">
           <button type="submit" class="layui-btn"><i class="fa fa-search"></i> 搜索</button>
            <if condition="$status eq 3 && $type eq 3">
                <button type="submit" class="layui-btn layui-btn-small" name="excel" value="1">导出excel</button>
            </if>
        </span>
    </div>
</form>


<div class="clear"></div>
<div class="layui-field-title"></div>

<!-- 模板样式 -->

<div class="layui-form">

    <div class="layui-tab" lay-filter="test">
        <ul class="layui-tab-title">
            <li onclick="$('table.layui-table tbody').html('<tr><td colspan=\'13\' align=\'center\'>加载中...</td></tr>');" <if condition="$type eq 3"> class="layui-this" </if>>
            <a href="{:url('Userwithdraw/CashList',array('type'=>3))}">银行卡提现</a>
            </li>
            <li onclick="$('table.layui-table tbody').html('<tr><td colspan=\'13\' align=\'center\'>加载中...</td></tr>');" <if condition="$type eq 1 "> class="layui-this" </if>>
            <a href="{:url('Userwithdraw/CashList',array('type'=>1))}">微信提现</a>
            </li>
            <li onclick="$('table.layui-table tbody').html('<tr><td colspan=\'13\' align=\'center\'>加载中...</td></tr>');" <if condition="$type eq 2"> class="layui-this" </if>>
            <a href="{:url('Userwithdraw/CashList',array('type'=>2))}">支付宝提现</a>
            </li>

        </ul>
        <div class="layui-tab-content">

            <div class="layui-input-block">
                <div class="layui-btn-group search">
                    <a href="{:url('Userwithdraw/CashList',array('status'=>0,'type'=>$type))}">
                        <button class="layui-btn <if condition="$status eq 0">layui-btn-normal<else />layui-btn-primary</if>">待审核 ({$number["stay"]|default=0})</button></a>
                    <a href="{:url('Userwithdraw/CashList',array('status'=>1,'type'=>$type))}">
                        <button class="layui-btn <if condition="$status eq 1">layui-btn-normal<else />layui-btn-primary</if>">审核失败 ({$number["rebut"]|default=0})</button></a>

                    <a href="{:url('Userwithdraw/CashList',array('status'=>2,'type'=>$type))}">
                        <button class="layui-btn <if condition="$status eq 2">layui-btn-normal<else />layui-btn-primary</if>">审核通过 ({$number["adopt"]|default=0})</button></a>

                    <a href="{:url('Userwithdraw/CashList',array('status'=>3,'type'=>$type))}">
                        <button class="layui-btn <if condition="$status eq 3">layui-btn-normal<else />layui-btn-primary</if>">提现队列 ({$number["queue"]|default=0})</button></a>
                    <a href="{:url('Userwithdraw/CashList',array('status'=>6,'type'=>$type))}">
                        <button class="layui-btn <if condition="$status eq 6">layui-btn-normal<else />layui-btn-primary</if>">提现成功 ({$number["success"]|default=0})</button></a>
                    <a href="{:url('Userwithdraw/CashList',array('status'=>7,'type'=>$type))}">
                        <button class="layui-btn <if condition="$status eq 7">layui-btn-normal<else />layui-btn-primary</if>">提现失败 ({$number["fail"]|default=0  })</button></a>
                </div>
            </div>

            <div class="clear"></div>

            <if condition="!empty($data['list'])">
                <table class="layui-table" lay-skin="line" >
                    <thead>
                    <tr>
                        <th width="20" class="nowrap"><input type="checkbox" name="" lay-skin="primary" lay-filter="allChoose"></th>
                        <th >用户昵称</th>
                        <th >真实名字</th>
                        <th >联系电话</th>
                        <th >银行名</th>
                        <th >银行卡号</th>
                        <th >提现金额</th>
                        <th >手续费</th>
                        <th >实际提现</th>
                        <th >提现类型</th>
                        <if condition="in_array($status,array(1,7))">
                            <th width="260px;">失败原因</th>
                        </if>
                        <if condition="$status neq 0">
                            <th >审核时间</th>
                        </if>
                        <th >提现时间</th>
                        <if condition="in_array($status,array(0,2,3,6))">
                            <th width="100">操作</th>
                        </if>
                    </tr>
                    </thead>

                    <tbody>
                    <volist name="$data['list']" id="val">
                        <tr class="">
                            <td ><input type="checkbox" name="id[]" value="{$val.withdraw_id}" lay-skin="primary" lay-filter="idchoose"></td>
                            <td >{$val['nickname']}</td>
                            <td >{$val['truename']}</td>
                            <td >{$val['mobile']}</td>
                            <td >{$val['bank_name']}</td>
                            <td >{$val['account_number']}</td>
                            <td >{$val['withdraw_amount']}</td>
                            <td>{$val['withdraw_handfee']}</td>
                            <td>{$val['withdraw_realamount']}</td>
                            <td>
                                <if condition="$val['withdraw_type'] eq 1">
                                    <label class="layui-badge layui-bg-green">微信提现</label>
                                    <elseif condition="$val['withdraw_type'] eq 2" />
                                    <label class="layui-badge  layui-btn-warm">银行卡提现</label>
                                    <else />
                                    <label class="layui-badge layui-btn-normal">支付宝</label>
                                </if>
                            </td>
                            <if condition="in_array($status,array(1,7))">
                                <td>{$val['withdraw_reason']}</td>
                            </if>
                            <if condition="$status neq 0">
                                <td >{$val['withdraw_uptime']|date="Y-m-d H:i",###}</td>
                            </if>
                            <td >{$val['withdraw_addtime']|date="Y-m-d H:i",###}</td>
                            <if condition="in_array($status,array(0,2,3,6))">

                                <if condition="$val.withdraw_type eq 2">
                                    <td >
                                        <div class="layui-btn-group">
                                            <a href="javascript:openWindow('提现信息', '{:url(\'system/Userwithdraw/CashData\', array(\'id\'=>$val[\'withdraw_id\'],\'status\'=>$status))}', '40%', '50%')" class="layui-btn layui-btn-sm" title="提现流程">
                                                <i class="layui-icon"></i>
                                            </a>
                                        </div>
                                    </td>
                                </if>
                                <if condition="$status neq 6 and $val.withdraw_type neq 2">
                                    <td >
                                        <div class="layui-btn-group">
                                            <a href="javascript:openWindow('提现信息', '{:url(\'system/Userwithdraw/CashData\', array(\'id\'=>$val[\'withdraw_id\'],\'status\'=>$status))}', '40%', '50%')" class="layui-btn layui-btn-sm" title="提现流程">
                                                <i class="layui-icon"></i>
                                            </a>
                                        </div>
                                    </td>
                                </if>
                            </if>
                        </tr>
                    </volist>
                    </tbody>
                </table>
                <else />
                <div class="layui-field-title"></div>
                <div class="layui-form-item">
                    <div class="layui-input-block">
                        暂无数据w(ﾟДﾟ)w
                    </div>
                </div>
            </if>

            <div class="tabletool">

                <if condition="$data['list'] and in_array($status,array(0,2,3))">
                    <div class="l">
                        <a href="javascript:batchDel('/system/Userwithdraw/CashAdopt?status={$status}&type={$type}','确定执行提现批量通过');" class="layui-btn batchdel layui-btn-small layui-btn-disabled">批量通过</a>
                    </div>
                </if>

                <!-- 分页工具 -->
                <div id="limitpage" class="r"></div>
                <div class="clear"></div>
            </div>
        </div>

    </div>
</div>

</div>

<script>

</script>