<!doctype html>
<html>

	<head>
		<meta charset="UTF-8">
		<title>商品详情</title>
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<link href="../../css/mui.min.css" rel="stylesheet" />
		<link href="../../css/leWan.css" rel="stylesheet" />
		<link href="../../plugins/swiper-4.3.3.min.css" rel="stylesheet" />
		<link href="../../fonts/iconfont.css" rel="stylesheet" />
		<style type="text/css">
			body {
				padding: 0;
				margin: 0
			}
			/*banner图*/
			
			.mui-slider-item {
				height: 5.866rem !important;
				overflow: hidden;
			}
			
			.mui-slider img {
				width: 100%;
				height: 100%;
				position: absolute;
			}
			
			.mui-slider-indicator {
				bottom: 8px;
			}
			
			.mui-slider-indicator .mui-indicator {
				background-color: #FFFFFF;
			}
			
			.mui-slider-indicator .mui-active.mui-indicator {
				background: #E1B872;
				box-shadow: 0 0 0 0 #fff;
			}
			/*商品价格*/
			
			.priceBox {
				color: #FFFFFF;
				font-size: 0.32rem;
				background-color: #F77917;
				width: 100%;
				height: 0.933rem;
				line-height: 0.933rem;
				padding: 0 0.32rem;
			}
			.isNumNone{
				background-color: #999999;
			}
			.realityPrice {
				font-size: 0.613rem;
			}
			
			.originalCost {
				text-decoration: line-through;
				margin-left: 0.346rem;
			}
			
			.countDown {
				float: right;
			}
			
			.textIntroduce {
				min-height: 3.5rem;
				background-color: #FFFFFF;
				padding: 0.266rem 0.32rem;
				position: relative;
			}
			
			.textShowOne {
				overflow: hidden;
				text-overflow: ellipsis;
				display: -webkit-box;
				-webkit-line-clamp: 3;
				/*规定几行显示省略号*/
				-webkit-box-orient: vertical;
				text-indent: 0.106rem;
				font-size: 0.4rem;
				font-weight: bold;
				color: #333333;
				letter-spacing: -1px;
				line-height: 1.3;
			}
			
			.textShowOne strong {
				font-size: 0.506rem;
				letter-spacing: 0;
			}
			
			.textLabel {
				position: absolute;
				bottom: 0.266rem;
				left: 0;
				width: 100%;
			}
			
			.textLabel>span {
				display: inline-block;
				border: 1px solid #F7AE31;
				border-radius: 0.15rem;
				padding: 0.026rem 0.133rem;
				color: #F7AE31;
				font-size: 0.293rem;
				font-weight: 500;
				margin-right: 0.2rem;
			}
			
			.textLabel>span:first-child {
				margin-left: 0.4rem;
			}
			
			.textLabel .commission {
				float: right;
				border: none;
				color: #999999;
				font-size: 0.346rem;
				font-weight: 500;
			}
			
			.commission>span {
				color: #F77917;
				font-size: 0.48rem;
				font-weight: 500;
			}
			/*商家地址*/
			
			.BusinessAddress {
				background-color: #FFFFFF;
				margin-top: 0.266rem;
				font-weight: bold;
				color: #999999;
				padding: 0.14rem 0.32rem;
				overflow: hidden;
			}
			
			.BusinessAddress img {
				width: 0.5rem;
				height: 0.6rem;
				margin-right: 0.1rem;
				display: inline-block;
				vertical-align: middle;
			}
			
			.addressLeft {
				display: inline-block;
				width: 90%;
				float: left;
			}
			
			.addressLeft>div:first-child {
				font-size: 0.426rem;
			}
			
			.addressLeft>div:last-child {
				margin-top: 0.16rem;
			}
			
			.addressDetail {
				display: inline-block;
				vertical-align: middle;
				width: 90%;
				overflow: hidden;
				white-space: nowrap;
				text-overflow: ellipsis;
			}
			
			.addressRight {
				display: inline-block;
				width: 10%;
				float: right;
				text-align: center;
				padding: 0.3rem 0;
			}
			/*商品详情*/
			
			.content {
				background-color: #FFFFFF;
				margin-top: 0.266rem;
			}
			
			.details {
				display: flex;
				justify-content: center;
				align-items: center;
				justify-content: space-around;
				color: #333333;
				font-size: 0.426rem;
				padding: 0.346rem 0 0.24rem 0;
				border-bottom: 1px solid #F2F2F2;
			}
			
			.detailsActive {
				/*选中时的状态*/
				position: relative;
			}
			
			.detailsActive:before {
				content: "";
				position: absolute;
				left: 25%;
				bottom: -0.24rem;
				width: 50%;
				height: 4px;
				background-color: #F77917;
			}
			
			.contentBox {
				padding: 0.2rem 0.2rem;
			}
			
			.contentBox img {
				width: 100% !important;
				height: auto;
				vertical-align: bottom
			}
			
			.contentBox span {
				max-width: 100%;
			}
			
			.purchaseNotes p {
				font-size: 0.4rem;
				color: #333333;
				font-weight: bold;
				margin: 0.266rem;
			}
			
			.purchaseNotesText {
				padding: 0 0.2rem;
				font-size: 0.346rem;
				color: #999999;
			}
			
			.informationImg {
				background-size: 100% 100%;
				text-align: center;
				width: 3.706rem;
				height: 1.28rem;
				line-height: 1.28rem;
				font-size: 0.453rem;
				color: #333333;
				margin: 0.266rem auto;
			}
			/*底部栏*/
			
			.downBtn {
				width: 100%;
				height: 1.28rem;
				z-index: 10;
				position: fixed;
				bottom: -1px;
				font-size: 0.506rem;
				font-weight: bold;
				box-shadow: 0 -1px 10px 1px rgba(0, 0, 0, 0.3);
			}
			
			.downBtn>div {
				display: inline-block;
				text-align: center;
				line-height: 1.28rem;
				float: left;
			}
			
			.downBtnOne {
				width: 35%;
				font-size: 0.4rem;
				color: #333333;
				background-color: #FFFFFF;
			}
			
			.downBtnTwo {
				width: 24%;
				color: #FFFFFF;
				background-color: #333333;
			}
			
			.downBtnThree {
				width: 41%;
				color: #FFFFFF;
				background-color: #F77917;
			}
			
			.downBtnFour {
				width: 65%;
				color: #FFFFFF;
				background-color: #999999;
			}
			/*推荐更多-轮播*/
			
			.footer {
				background-color: #FFFFFF;
				margin-top: 0.266rem;
			}
			
			.footerHeader {
				font-size: 0.453rem;
				font-weight: bold;
				color: #333333;
				text-align: center;
				padding: 0.8rem 0 0.5rem 0;
			}
			
			.goodsBox {
				display: flex;
				justify-content: center;
				flex-wrap: wrap;
			}
			
			.mui-card {
				box-shadow: none;
				margin: 0.15rem;
			}
			
			.mui-card-header {
				width: 4.4rem;
				height: 2.666rem;
				border-radius: 7px;
			}
			
			.mui-card-footer:before,
			.mui-card-header:after {
				height: 0;
			}
			
			.mui-card-header.mui-card-media {
				padding: 0;
				position: relative;
			}
			
			.address {
				position: absolute;
				left: 0;
				bottom: 0;
				padding: 0 5px 0 2px;
				background-color: #F77917;
				color: #FFFFFF;
				font-size: 0.266rem;
				font-weight: 800;
				border-bottom-left-radius: 7px;
				border-bottom-right-radius: 10px;
				border-top-right-radius: 10px;
			}
			
			.mui-card-content {
				width: 4.4rem;
			}
			
			.mui-cardFooter {
				width: 4.4rem;
				padding: 0 0.2rem;
			}
			
			.mui-card-content-inner {
				padding: 0.2rem 0.15rem;
			}
			
			.textShow {
				overflow: hidden;
				text-overflow: ellipsis;
				display: -webkit-box;
				-webkit-line-clamp: 3;
				-webkit-box-orient: vertical;
				text-indent: 0.106rem;
				font-size: 0.3rem;
				font-weight: bold;
				color: #666;
				letter-spacing: -1px;
				line-height: 1.3;
			}
			
			.textShow strong {
				font-size: 0.4rem;
				letter-spacing: 0;
				color: #333333;
			}
			
			.mui-cardFooter p {
				width: 100%;
			}
			
			.cardTrue {
				font-size: 0.426rem;
				color: #F77917;
				margin-right: 0.2rem;
			}
			
			.cardFalse {
				font-size: 0.4rem;
				color: #999999;
				text-decoration: line-through;
			}
			
			.cardText {
				font-size: 0.4rem;
				color: #999999;
				margin-right: 0.2rem;
			}
			
			.cardMoney {
				font-size: 0.4rem;
				color: #EAC380;
			}
			
			.swiper-container {
				padding-bottom: 20px;
			}
			
			.swiper-container-horizontal>.swiper-pagination-bullets {
				bottom: 0;
			}
		</style>
	</head>

	<body>
		<div class="" id="J_el">
			<div class="" v-if="showPage">
				<div class="headerBox">
					<div class="mui-slider">
						<div class="mui-slider-group mui-slider-loop">
							<div class="mui-slider-item zuihou" v-for="(items,index) in proDetail.product_carousel.slice(proDetail.product_carousel.length-1)">
								<img :src="items" />
							</div>
							<div class="mui-slider-item" :class="{'mui-active': index == 0}" v-for="(items,index) in proDetail.product_carousel">
								<img :src="items" />
							</div>
							<div class="mui-slider-item kaishi" v-for="(items,index) in proDetail.product_carousel.slice(0,1)">
								<img :src="items" />
							</div>
							<!--<div class="mui-slider-item">
								<img src="../../img/homePage/banner2.png" />
							</div>-->
						</div>
						<!--轮播图图标小点-->
						<div class="mui-slider-indicator">
							<div class="mui-indicator" :class="{'mui-active': index == 0}" v-for="(items,index) in proDetail.product_carousel"></div>
							<!--<div class="mui-indicator"></div>-->
						</div>
					</div>
					<div class="priceBox" :class="{'isNumNone':proDetail.product_numlimit==1&&proPrice.price_commission==0}">
						<span class="realityPrice">￥{{ proPrice.price_sale }}</span>
						<span class="originalCost">￥{{ proPrice.price_market }}</span>
						<span class="countDown" v-if="proPrice.product_timelimit == 1">距离结束：03天08:11:21</span>
						<!--TODO 倒计时还未实现-->
					</div>
					<div class="textIntroduce">
						<div class="textShowOne"><strong>【{{ proDetail.product_name }}】</strong>商品详情????????</div>
						<div class="textLabel">
							<span v-for="items in proDetail.product_tags">{{ items.tag_name }}</span>
							<!--<span>家庭聚会</span>-->
							<span class="commission">佣金：<span>￥{{ proPrice.price_commission }}</span></span>
							<!--TODO 新人和普通用户不显示-->
						</div>
					</div>
				</div>
				<div class="BusinessAddress">
					<div class="addressLeft">
						<div>商家地址</div>
						<div>
							<img src="../../img/homePage/address.jpg" />
							<span class="addressDetail" :lat="proDetail.merchant_lat" :lng="proDetail.merchant_lng">{{ proDetail.merchant_address }}</span>
						</div>
					</div>
					<div class="addressRight" @tap="getSignature(proDetail.merchant_lat,proDetail.merchant_lng,proDetail.merchant_address)"><i class="mui-icon mui-icon-forward"></i></div>
				</div>
				<div class="content">
					<div class="details">
						<span class="detailsSec detailsActive">购买须知</span>
						<span class="detailsSec">特色介绍</span>
					</div>
					<div class="contentBox">
						<!--购买须知-->
						<div class="purchaseNotes">
							<div class="">
								<p>【产品详情】</p>
								<div class="purchaseNotesText" v-html="proDetail.product_info"></div>
							</div>
							<div class="">
								<p>【使用方法】</p>
								<div class="purchaseNotesText" v-html="proDetail.product_useinfo"></div>
							</div>
							<div class="">
								<p>【温馨提示】</p>
								<div class="purchaseNotesText" v-html="proDetail.product_notice"></div>
							</div>
						</div>
						<!--特色介绍-->
						<div class="information">
							<div class="informationImg" style="background-image: url(../../img/homePage/productDetail1.png);">特色介绍</div>
							<div class="informationText" v-html="proDetail.product_description"></div>
						</div>
					</div>
				</div>
				<div class="footer" v-if="proHotpush.length">
					<div class="footerHeader">更多推荐</div>
					<div class="swiper-container swiper-container-horizontal swiper-container-ios">
						<div class="swiper-wrapper">
							<div class="swiper-slide">
								<div class="goodsBox">
									<div class="mui-card" v-for="items in proHotpush.slice(0, 4)">
										<div class="mui-card-header mui-card-media" :style="{backgroundImage: 'url(' + items.product_compic + ')'}">
											<div class="address"><i class="iconfont icon-dingwei"></i>{{ items.region }}</div>
										</div>
										<div class="mui-card-content">
											<div class="mui-card-content-inner">
												<p class="textShow"><strong>【{{ items.merchant_name }}】</strong>{{ items.product_name }}
												</p>
											</div>
										</div>
										<div class="mui-cardFooter">
											<p><span class="cardTrue">￥{{items.temp_price}}</span><span class="cardFalse">￥684??????</span></p>
											<!--TODO 商品原价-->
											<p><span class="cardText">佣金：</span><span class="cardMoney">￥{{items.temp_commission}}</span></p>
											<!--TODO 新人未注册不显示佣金-->
										</div>
									</div>
								</div>
							</div>
							<div class="swiper-slide">
								<div class="mui-card" v-if="proHotpush.length>4" v-for="items in proHotpush.slice(4, 8)">
									<div class="mui-card-header mui-card-media" :style="{backgroundImage: 'url(' + items.product_compic + ')'}">
										<div class="address"><i class="iconfont icon-dingwei"></i>{{ items.region }}</div>
									</div>
									<div class="mui-card-content">
										<div class="mui-card-content-inner">
											<p class="textShow"><strong>【{{ items.merchant_name }}】</strong>{{ items.product_name }}
											</p>
										</div>
									</div>
									<div class="mui-cardFooter">
										<p><span class="cardTrue">￥{{items.temp_price}}</span><span class="cardFalse">￥684??????</span></p>
										<!--TODO 商品原价-->
										<p><span class="cardText">佣金：</span><span class="cardMoney">￥{{items.temp_commission}}</span></p>
										<!--TODO 新人未注册不显示佣金-->
									</div>
								</div>
								<!--空状态时-->
								<div class="lw-empty" style="display: block;" v-else>
									<div class="lw-empty-box">
										<div class="lw-empty-flex">
											<img src="../../img/personalCenter/nullList2.png" alt="" class="lw-empty-img" />
											<div class="lw-empty-test">暂无更多产品！</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						<!-- Add Pagination -->
						<div class="swiper-pagination swiper-pagination-bullets">
							<span class="swiper-pagination-bullet"></span>
							<span class="swiper-pagination-bullet"></span>
						</div>
						<span class="swiper-notification" aria-live="assertive" aria-atomic="true"></span>
					</div>
				</div>
				<div class="downBtn">
					<div class="downBtnOne" @tap="jumpToHomePage">首页</div>
					<!--TODO-->
					<div class="downBtnTwo" @tap="shareProduct()">分享</div>
					<div class="downBtnThree" @tap="BuyNow(proDetail.product_id,proPrice.price_id)">立刻购买</div>
					<!--<div class="downBtnFour" @tap="BuyNow">已售罄</div>-->
				</div>
			</div>
		</div>
		<script src="../../plugins/flexible.js"></script>
		<script type="text/javascript" src="http://res.wx.qq.com/open/js/jweixin-1.4.0.js"></script>
		<script src="../../plugins/jquery-2.1.4.js"></script>
		<script src="../../plugins/vue.js"></script>
		<script src="../../js/mui.min.js"></script>
		<script src="../../plugins/swiper-4.3.3.min.js"></script>
		<script src="../../plugins/serverApi.js"></script>
		<script type="text/javascript">
			$(function() {
				var token = localStorage.getItem("token");
				var isLocation = getUrlParam("isLocation"); //是否定位
				var productId = getUrlParam("productId"); //商品id
				var latitude = getUrlParam("latitude"); //纬度
				var longitude = getUrlParam("longitude"); //经度

				/*======================================================*/
				var vueData = {
					showPage: false,
					proDetail: {}, //商品详情
					proPrice: {}, //商品规格
					proHotpush: [], //热推商品
				};
				new Vue({
					el: '#J_el',
					data: vueData,
					methods: {
						getSignature: getSignature, //地图查看
						jumpToHomePage: jumpToHomePage, //跳转首页
						shareProduct: shareProduct, //分享商品
						BuyNow: BuyNow, //立刻购买
					},
					mounted: function() {

					},
					updated: function() {
						//商品推荐更多
						var swiper = new Swiper('.swiper-container', {
							pagination: {
								el: '.swiper-pagination',
							},
						});
						sharePYQ();
					}
				});

				getProductDetails();

				function getProductDetails() {
					var data = {
						token: token,
						type: 1, //TODO
						pr_id: productId,
						lat: latitude,
						lng: longitude
					};
					$.ajax({
						url: API_SERVER + 'Product/ProductDetails',
						async: false,
						data: data,
						success: function(data) {
							log(data)
							if(data.code == 200) {
								vueData.proDetail = data.data.details;
								vueData.proPrice = data.data.price[0];
								vueData.proHotpush = data.data.hotpush;
								vueData.showPage = true;
							}
						}
					});
				}

				//地图跳转
				mui('body').on('tap', '.BusinessAddress', function() {

				})
				//首页
				function jumpToHomePage() {
					mui.openWindow({
						url: "homePage.html"
					})
				}
				//立刻购买
				function BuyNow(productId,priceId) {
					mui.openWindow({
						url: "OrderPayment.html?productId="+productId+"&priceId="+priceId
					})
				}
				//分享商品
				function shareProduct(title, url, imgUrl) {

				}

				function sharePYQ() {
					getWechatSignature(location.href.split('#')[0]);
					wx.ready(function() {
						wx.onMenuShareTimeline({
							title: vueData.proDetail.product_name,
							link: location.href,
							imgUrl: "http://cs.lewan6.ren/uploads/20181023/d299376281014144e775bc6a21918586.jpg",
							trigger: function(res) {
								// 不要尝试在trigger中使用ajax异步请求修改本次分享的内容，因为客户端分享操作是一个同步操作，这时候使用ajax的回包会还没有返回
							},
							success: function(res) {
							},
							cancel: function(res) {
							},
							fail: function(res) {
								mui.toast(res);
							}
						});
						wx.onMenuShareAppMessage({
							title: vueData.proDetail.product_name,
							desc: '在长大的过程中，我才慢慢发现，我身边的所有事，事情是可以改变的',
							link: location.href,
							imgUrl: "http://cs.lewan6.ren/uploads/20181023/d299376281014144e775bc6a21918586.jpg",
							trigger: function(res) {
								// 不要尝试在trigger中使用ajax异步请求修改本次分享的内容，因为客户端分享操作是一个同步操作，这时候使用ajax的回包会还没有返回
							},
							success: function(res) {
							},
							cancel: function(res) {
							},
							fail: function(res) {
								mui.toast(res);
							}
						});
					});
				}

				//商家地址
				function getSignature(lat, lng, address) {
					log(lat + "==" + lng + "===" + address);
					getWechatSignature(location.href.split('#')[0]);
					wx.ready(function() {
						wx.openLocation({
							latitude: parseFloat(lat),
							longitude: parseFloat(lng),
							name: '商家地址',
							address: address,
							scale: 15,
							infoUrl: '',
							success: function(res) {
								alert('打开');
							},
							fail: function(res) {
								alert(JSON.stringify(res));
							}
						})
					});
				}
			})
		</script>
	</body>

</html>