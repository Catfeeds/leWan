<!doctype html>
<html>

	<head>
		<meta charset="UTF-8">
		<title>我的订单</title>
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<link href="../../css/mui.min.css" rel="stylesheet" />
		<link href="../../css/leWan.css" rel="stylesheet" />
		<link href="../../plugins/swiper-4.3.3.min.css" rel="stylesheet" />
		<link href="../../fonts/iconfont.css" rel="stylesheet" />
		<style type="text/css">
			body {
				padding: 0;
				margin: 0;
			}
			
			html,body,.lw-empty-box {
				background-color: #F2F2F2 !important;
			}
			/*头部*/
			
			.header {
				background-color: #FFFFFF;
				height: 1.2rem;
				line-height: 1.2rem;
				display: flex;
				justify-content: space-around;
				font-size: 0.4rem;
				color: #333333;
				font-weight: 500;
				z-index: 20;
				border-bottom: 1px solid #F2F2F2;
			}
			
			.header>span {
				padding: 0 0.35rem;
			}
			
			.headerActive {
				font-size: 0.4rem;
				color: #333333;
				font-weight: bold;
				border-bottom: 5px solid #E1B872;
			}
			/*内容*/
			
			.content {
				min-height: 100vh;
				
			}
			.mui-scroll-wrapper{
				top: 1.2rem;
			}
			.contentList,
			.lw-empty {
				background-color: #FFFFFF;
			}
			
			.contentList {
				margin: 0.266rem 0.16rem 0.16rem 0.16rem;
				border-radius: 0.2rem;
			}
			
			.indentNum {
				height: 0.853rem;
				line-height: 0.853rem;
				padding: 0 0.2rem;
				border-bottom: 1px solid #F2F2F2;
			}
			
			.indentNum>span:nth-child(1) {
				font-size: 0.373rem;
				color: #333333;
				font-weight: 500;
			}
			
			.indentNum>span:nth-child(2) {
				font-size: 0.4rem;
				color: #333333;
				font-weight: bold;
				margin-left: 0.2rem;
			}
			
			.indentNum>span:nth-child(3) {
				font-size: 0.373rem;
				color: #F76E1E;
				font-weight: bold;
				float: right;
			}
			
			.indentName {
				font-size: 0.426rem;
				color: #333333;
				font-weight: bold;
				margin-top: 0.213rem;
				padding-left: 0.3rem;
				padding-right: 0.2rem;
				width: 100%;
				white-space: nowrap;
				overflow: hidden;
				text-overflow: ellipsis;
			}
			
			.indentAddress {
				font-size: 0.346rem;
				color: #999999;
				font-weight: 500;
				padding-left: 0.3rem;
				padding-right: 0.2rem;
				margin-top: 0.2rem;
				width: 100%;
				white-space: nowrap;
				overflow: hidden;
				text-overflow: ellipsis;
			}
			
			.indentPrice {
				font-size: 0.4rem;
				color: #666666;
				font-weight: bold;
				margin-left: 0.4rem;
				margin-top: 0.266rem;
			}
			
			.money {
				font-size: 0.48rem;
				color: #F77917;
			}
			
			.indentTime {
				height: 0.826rem;
				line-height: 0.826rem;
				font-size: 0.32rem;
				color: #999999;
				font-weight: 500;
				margin-left: 0.4rem;
				margin-top: 0.2rem;
			}
		</style>
	</head>

	<body>
		<div class="header">
			<!--订单状态： 1全部 2待付款 3已付款 4已完成 5退款-->
			<span indentState="1" class="headerList headerActive">全部</span>
			<span indentState="2" class="headerList">待付款</span>
			<span indentState="3" class="headerList">已付款</span>
			<span indentState="4" class="headerList">已完成</span>
			<!--<span indentState="6" class="headerList">退款</span>-->
		</div>

		<div class="content">
			<div class="mui-scroll-wrapper" id="refreshContainer">
				<div class="mui-scroll">
					<div id="J_el" v-cloak>
						<div class="contentBox" v-if="indentList.length">
							
							<div class="contentList" v-for="items in indentList" @tap="jumpToDetails(items.order_id)">
								<div class="indentNum"><span>订单号:{{items.order_no}}</span><span> </span><span>{{statusText[items.order_status]}}</span></div>
								<div class="indentName">【{{items.product_name}}】</div>
								<p class="indentAddress"><i class="iconfont icon-dingwei"></i>{{items.region}}</p>
								<div class="indentPrice">总价：<span class="money">￥{{items.order_totalfee}}</span></div>
								<div class="indentTime">商品有效期：{{getDateTime(items.startusetime,"Y-MM-dd")}} 至 {{getDateTime(items.endusetime,"Y-MM-dd")}}</div>
							</div>
							
						</div>

						<!--空状态时-->
						<div class="lw-empty" style="display: block;" v-else>
							<div class="lw-empty-box">
								<div class="lw-empty-flex">
									<img src="../../img/personalCenter/nullList1.png" alt="" class="lw-empty-img" />
									<div class="lw-empty-test">暂无订单 去购买产品吧！</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<script src="../../plugins/flexible.js"></script>
		<script src="../../plugins/jquery-2.1.4.js"></script>
		<script src="../../plugins/vue.js"></script>
		<script src="../../js/mui.min.js"></script>
		<script src="../../plugins/swiper-4.3.3.min.js"></script>
		<script src="../../plugins/serverApi.js"></script>
		<script type="text/javascript">
			$(function() {
				/*下拉刷新和上拉加载效果*/
				mui.init({
					pullRefresh: {
						container: '#refreshContainer', //下拉刷新容器标识，querySelector能定位的css选择器均可，比如：id、.class等
						up: {
							height: 50,
							auto: false,
							contentnomore: '没有更多数据了',
							contentrefresh: '正在加载...',
							callback: function() {
								setTimeout(function() {
									getList();
								}, 1000);
							}
						}
					}
				});

				var token = localStorage.getItem("token");
				var pageData = {
					page: 1,
					psize: 10
				}
				var vueData = {
					indentList: [],
					statusText:["已过期","待付款","待发货","待预约","待收货","待使用","待预约","已完成","取消订单","申请退款","申请换货"]
					//0订单过期 1待付款 2待发货 3待预约发货 4待收货 5待使用 6待预约 7已完成 8取消订单 9申请退款 10 申请换货 
				}
				new Vue({
					el: "#J_el",
					data: vueData,
					methods: {
						jumpToDetails: jumpToDetails
					}
				})

				getList(true);
				var status = null;
				function getList(empty) {
					$.ajax({
						url: API_SERVER + "User/UserOrderList",
						data: {
							token: token,
							type: status, // 默认1 1全部 2待付款 3已付款 4已完成 5退款
							page: pageData.page, //页码（默认第一页,默认1）
							psize: pageData.psize //每页数量（默认10条）
						},
						success: function(data) {
							log(data)
							if(data.code == 200) {
								var lists = data.data;
								empty && vueData.indentList.splice(0);
								for(var i = 0; i < lists.length; i++) {
									vueData.indentList.push(lists[i]);
								}
								pageData.page++;
								var pullRefresh = mui('#refreshContainer').pullRefresh();
								pullRefresh && pullRefresh.endPulldownToRefresh && pullRefresh.endPulldownToRefresh();
								pullRefresh && pullRefresh.refresh && pullRefresh.refresh(true);
								pullRefresh && pullRefresh.endPullupToRefresh && pullRefresh.endPullupToRefresh(lists.length < pageData.psize);
							} else {
								mui.toast(data.message)
							}
						}
					});
				}
				
				function jumpToDetails(orderId) {
					mui.openWindow({
						url: "../reservationCenter/indentDetail.html?orderId="+orderId
					})
				}

				//切换导航栏
				mui("body").on("tap", ".headerList", function() {
					$(".headerList").removeClass("headerActive");
					$(this).addClass("headerActive");
					status = $(this).attr("indentState");
					mui('#refreshContainer').pullRefresh().refresh(true);
					pageData.page = 1;  
					getList(true);
				})
			})
		</script>
	</body>

</html>