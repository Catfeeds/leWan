<!doctype html>
<html>

	<head>
		<meta charset="UTF-8">
		<title>商品详情</title>
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<link href="../../css/mui.min.css" rel="stylesheet" />
		<link href="../../css/leWan.css" rel="stylesheet" />
		<link href="../../plugins/swiper-4.3.3.min.css" rel="stylesheet" />
		<link href="../../fonts/iconfont.css" rel="stylesheet" />
		<style type="text/css">
			body {
				padding: 0;
				margin: 0;
			}
			html,body,p,span,strong,pre,div{
				-webkit-user-select: text !important;
			}
			/*banner图*/
			
			.mui-slider-item {
				height: 5.866rem !important;
				overflow: hidden;
			}
			
			.mui-slider img {
				width: 100%;
				height: 100%;
				position: absolute;
			}
			
			.mui-slider-indicator {
				bottom: 8px;
			}
			
			.mui-slider-indicator .mui-indicator {
				background-color: #FFFFFF;
			}
			
			.mui-slider-indicator .mui-active.mui-indicator {
				background: #E1B872;
				box-shadow: 0 0 0 0 #fff;
			}
			/*商品价格*/
			
			.priceBox {
				color: #FFFFFF;
				font-size: 0.32rem;
				background-color: #F77917;
				width: 100%;
				height: 0.933rem;
				line-height: 0.933rem;
				padding: 0 0.32rem;
			}
			.isNumNone{
				background-color: #999999;
			}
			.realityPrice {
				font-size: 0.613rem;
			}
			
			.originalCost {
				text-decoration: line-through;
				margin-left: 0.346rem;
			}
			
			.countDown {
				float: right;
			}
			
			.textIntroduce {
				min-height: 3.5rem;
				background-color: #FFFFFF;
				padding: 0.266rem 0.32rem;
				position: relative;
			}
			
			.textShowOne {
				overflow: hidden;
				text-overflow: ellipsis;
				display: -webkit-box;
				-webkit-line-clamp: 3;
				/*规定几行显示省略号*/
				-webkit-box-orient: vertical;
				text-indent: 0.106rem;
				font-size: 0.4rem;
				font-weight: bold;
				color: #333333;
				letter-spacing: -1px;
				line-height: 1.3;
			}
			
			.textShowOne strong {
				font-size: 0.506rem;
				letter-spacing: 0;
			}
			
			.textLabel {
				position: absolute;
				bottom: 0.266rem;
				left: 0;
				width: 100%;
			}
			
			.textLabel>span {
				display: inline-block;
				border: 1px solid #F7AE31;
				border-radius: 0.15rem;
				padding: 0.026rem 0.133rem;
				color: #F7AE31;
				font-size: 0.293rem;
				font-weight: 500;
				margin-right: 0.2rem;
			}
			
			.textLabel>span:first-child {
				margin-left: 0.4rem;
			}
			
			.textLabel .commission {
				float: right;
				border: none;
				color: #999999;
				font-size: 0.346rem;
				font-weight: 500;
			}
			
			.commission>span {
				color: #F77917;
				font-size: 0.48rem;
				font-weight: 500;
			}
			/*商家地址*/
			
			.BusinessAddress {
				background-color: #FFFFFF;
				margin-top: 0.266rem;
				font-weight: bold;
				color: #999999;
				padding: 0.14rem 0.32rem;
				overflow: hidden;
			}
			
			.BusinessAddress img {
				width: 0.5rem;
				height: 0.6rem;
				margin-right: 0.1rem;
				display: inline-block;
				vertical-align: middle;
			}
			
			.addressLeft {
				display: inline-block;
				width: 90%;
				float: left;
			}
			
			.addressLeft>div:first-child {
				font-size: 0.426rem;
			}
			
			.addressLeft>div:last-child {
				margin-top: 0.16rem;
			}
			
			.addressDetail {
				display: inline-block;
				vertical-align: middle;
				width: 90%;
				overflow: hidden;
				white-space: nowrap;
				text-overflow: ellipsis;
			}
			
			.addressRight {
				display: inline-block;
				width: 10%;
				float: right;
				text-align: center;
				padding: 0.3rem 0;
			}
			/*商品详情*/
			
			.content {
				background-color: #FFFFFF;
				margin-top: 0.266rem;
			}
			.detailsBox{
				height: 44px;
			}
			.details {
				width: 100%;
				height: 44px;
				color: #333333;
				font-size: 0.426rem;
				padding: 0.346rem 0 0.1rem 0;
				border-bottom: 1px solid #F2F2F2;
				text-align: center;
				background-color: #FFFFFF;
			}
			.details>span{
				display: inline-block;
				width: 49%;
				text-align: center;
				float: left;
			}
			
			.detailsFixd{
				position: fixed !important;
				top: 0 !important;
			}
			.detailsActive {
				/*选中时的状态*/
				position: relative;
			}
			
			.detailsActive:before {
				content: "";
				position: absolute;
				left: 40%;
				bottom: -0.24rem;
				width: 20%;
				height: 4px;
				background-color: #F77917;
			}
			
			.contentBox {
				padding: 0.2rem 0.2rem;
			}
			
			.contentBox img {
				width: 100% !important;
				height: auto;
				vertical-align: bottom
			}
			
			.contentBox span {
				max-width: 100%;
			}
			.information{
				overflow: hidden;
			}
			.purchaseNotes p {
				font-size: 0.4rem;
				color: #333333;
				font-weight: bold;
				margin: 0.266rem;
			}
			
			.purchaseNotesText {
				padding: 0 0.2rem;
				font-size: 0.346rem;
				color: #999999;
			}
			
			.informationImg {
				background-size: 100% 100%;
				text-align: center;
				width: 3.706rem;
				height: 1.28rem;
				line-height: 1.28rem;
				font-size: 0.453rem;
				color: #333333;
				margin: 0.266rem auto;
			}
			/*底部栏*/
			
			.downBtn {
				width: 100%;
				height: 1.28rem;
				z-index: 10;
				position: fixed;
				bottom: -1px;
				font-size: 0.506rem;
				font-weight: 500;
				box-shadow: 0 -1px 10px 1px rgba(0, 0, 0, 0.3);
			}
			
			.downBtn>div {
				display: inline-block;
				text-align: center;
				line-height: 1.28rem;
				float: left;
			}
			
			.downBtnOne {
				width: 35%;
				font-size: 0.4rem;
				color: #333333;
				background-color: #FFFFFF;
			}
			
			.downBtnTwo {
				width: 24%;
				color: #FFFFFF;
				background-color: #E1B872;
			}
			
			.downBtnThree {
				width: 41%;
				color: #FFFFFF;
				background-color: #F77917;
			}
			
			.downBtnFour {
				width: 65%;
				color: #FFFFFF;
				background-color: #999999;
			}
			/*推荐更多-轮播*/
			
			.footer {
				background-color: #FFFFFF;
				margin-top: 0.266rem;
			}
			
			.footerHeader {
				font-size: 0.453rem;
				font-weight: bold;
				color: #333333;
				text-align: center;
				padding: 0.8rem 0 0.5rem 0;
			}
			
			.goodsBox {
				display: flex;
				justify-content: center;
				flex-wrap: wrap;
			}
			
			.mui-card {
				box-shadow: none;
				margin: 0.15rem;
			}
			
			.mui-card-header {
				width: 4.4rem;
				height: 2.666rem;
				border-radius: 7px;
			}
			
			.mui-card-footer:before,
			.mui-card-header:after {
				height: 0;
			}
			
			.mui-card-header.mui-card-media {
				padding: 0;
				position: relative;
			}
			
			.address {
				position: absolute;
				left: 0;
				bottom: 0;
				padding: 0 5px 0 2px;
				background-color: #F77917;
				color: #FFFFFF;
				font-size: 0.266rem;
				font-weight: 800;
				border-bottom-left-radius: 7px;
				border-bottom-right-radius: 10px;
				border-top-right-radius: 10px;
			}
			
			.mui-card-content {
				width: 4.4rem;
			}
			
			.mui-cardFooter {
				width: 4.4rem;
				padding: 0 0.2rem;
			}
			
			.mui-card-content-inner {
				padding: 0.2rem 0.15rem;
			}
			
			.textShow {
				overflow: hidden;
				text-overflow: ellipsis;
				display: -webkit-box;
				-webkit-line-clamp: 3;
				-webkit-box-orient: vertical;
				text-indent: 0.106rem;
				font-size: 0.3rem;
				font-weight: bold;
				color: #666;
				letter-spacing: -1px;
				line-height: 1.3;
			}
			
			.textShow strong {
				font-size: 0.4rem;
				letter-spacing: 0;
				color: #333333;
			}
			
			.mui-cardFooter p {
				width: 100%;
			}
			
			.cardTrue {
				font-size: 0.426rem;
				color: #F77917;
				margin-right: 0.2rem;
			}
			
			.cardFalse {
				font-size: 0.4rem;
				color: #999999;
				text-decoration: line-through;
			}
			
			.cardText {
				font-size: 0.4rem;
				color: #999999;
				margin-right: 0.2rem;
			}
			
			.cardMoney {
				font-size: 0.4rem;
				color: #EAC380;
			}
			
			.swiper-container {
				padding-bottom: 20px;
			}
			
			.swiper-container-horizontal>.swiper-pagination-bullets {
				bottom: 0;
			}
			
			/*分享*/
			.modalBox{
				display: none;
				position: fixed;
				left: 0;
				top: 0;
				width: 100%;
				height: 100%;
				background-color: rgba(0,0,0,0.4);
				z-index: 15;
			}
			.modalCard{
				position: absolute;
				bottom: 0.2rem;
				left: 0.32rem;
				width: 9.36rem;
				height: 3.306rem;
				border-radius: 0.2rem;
				background-color: #FFFFFF;
				text-align: center;
				font-size: 0.373rem;
				color: #333333;
				font-weight: 500;
				display: flex;
				justify-content: space-around;
				align-items: center;
				
			}
			.modalCard img{
				width: 1.706rem;
				height: 1.706rem;
			}
			
			/*分享链接*/
			.modalBox1{
				display: none;
				position: fixed;
				left: 0;
				top: 0;
				width: 100%;
				height: 100%;
				background-color: rgba(0,0,0,0.6);
				z-index: 20;
			}
			.modalBox1 img{
				width: 100vw;
			}
			
			/*生成海报*/
			.modalBox2{
				display: none;
				position: fixed;
				left: 0;
				top: 0;
				width: 100vw;
				height: 100vh;
				z-index: 20;
				background-color: rgba(0,0,0,0.6);
				text-align: center;
			}
			
			.modalCard2{
				display: inline-block;
				margin-top: 4vh;
				width: 7.84rem;
				height: 13.92rem;
				position: relative;
			}
			.modelImg{
				width: 7.84rem;
				height: 13.92rem;
				border-radius: 0.18rem;
			}
			.modelClose{
				position: absolute;
				right: 0.1rem;
				top: 0.2rem;
				font-size: 0.8rem;
				color: #FFFFFF;
			}
		</style>
	</head>

	<body>
		<div class="" id="J_el" v-cloak>
			<div class="" v-if="showPage">
				<div class="headerBox">
					<div class="mui-slider">
						<div class="mui-slider-group mui-slider-loop">
							<div class="mui-slider-item zuihou" v-for="(items,index) in proDetail.product_carousel.slice(proDetail.product_carousel.length-1)">
								<img :src="items" />
							</div>
							<div class="mui-slider-item" :class="{'mui-active': index == 0}" v-for="(items,index) in proDetail.product_carousel">
								<img :src="items" />
							</div>
							<div class="mui-slider-item kaishi" v-for="(items,index) in proDetail.product_carousel.slice(0,1)">
								<img :src="items" />
							</div>
							<!--<div class="mui-slider-item">
								<img src="../../img/homePage/banner2.png" />
							</div>-->
						</div>
						<!--轮播图图标小点-->
						<div class="mui-slider-indicator">
							<div class="mui-indicator" :class="{'mui-active': index == 0}" v-for="(items,index) in proDetail.product_carousel"></div>
							<!--<div class="mui-indicator"></div>-->
						</div>
					</div>
					<div class="priceBox" :class="{'isNumNone': proDetail.sold_out == 1}">
						<span class="realityPrice">¥{{ proPrice.price_sale }}</span>
						<span class="originalCost">¥{{ proPrice.price_market }}</span>
						<span class="countDown" v-if="proDetail.product_timelimit == 1">{{countdown(proDetail.product_starttime,proDetail.product_endtime)}}{{countdownText}}</span>
						<span class="countDown" v-else-if="proDetail.sold_out == 1">商品已售罄</span>
					</div>
					<div class="textIntroduce">
						<div class="textShowOne"><strong>{{ proDetail.product_name }}</strong></div>
						<div class="textLabel">
							<span v-for="items in proDetail.product_tags">{{ items.tag_name }}</span>
							<span v-if="level == 2" class="commission">佣金：<span>¥{{ proPrice.price_commission.zigou }} ~ {{ proPrice.price_commission.fenxiang }}</span></span>
							<span v-else-if="level == 3 || level == 4 || level == 5" class="commission">佣金：<span>¥{{ proPrice.price_commission.zigou }}</span></span>
						</div>
					</div>
				</div>
				<div class="BusinessAddress" @tap="getSignature(proDetail.merchant_lat,proDetail.merchant_lng,proDetail.merchant_address)">
					<div class="addressLeft">
						<div>商家地址</div>
						<div>
							<img src="../../img/homePage/address.jpg" />
							<span class="addressDetail" :lat="proDetail.merchant_lat" :lng="proDetail.merchant_lng">{{ proDetail.merchant_address }}</span>
						</div>
					</div>
					<div class="addressRight"><i class="mui-icon mui-icon-forward"></i></div>
				</div>
				<div class="content">
					<div class="detailsBox">
						<div class="details">
							<span class="detailsSec detailsActive" dataVal='2'>特色介绍</span>
							<span class="detailsSec" dataVal="1">购买须知</span>
						</div>
					</div>
					<div class="contentBox">
						<!--特色介绍-->
						<div class="information" id="information">
							<div class="informationImg" style="background-image: url(../../img/homePage/productDetail1.png);">特色介绍</div>
							<div class="informationText" v-html="proDetail.product_description"></div>
						</div>
						<!--购买须知-->
						<div class="purchaseNotes" id="purchaseNotes">
							<div class="">
								<p>【产品详情】</p>
								<div class="purchaseNotesText" v-html="proDetail.product_info"></div>
							</div>
							<div class="">
								<p>【使用方法】</p>
								<div class="purchaseNotesText" v-html="proDetail.product_useinfo"></div>
							</div>
							<div class="">
								<p>【温馨提示】</p>
								<div class="purchaseNotesText" v-html="proDetail.product_notice"></div>
							</div>
						</div>
						
					</div>
				</div>
				<div class="footer" v-if="proHotpush.length">
					<div class="footerHeader">更多推荐</div>
					<div class="swiper-container swiper-container-horizontal swiper-container-ios">
						<div class="swiper-wrapper">
							<div class="swiper-slide">
								<div class="goodsBox">
									<div class="mui-card" v-for="items in proHotpush.slice(0, 4)" @tap="jumpToDetails(items.product_id)">
										<div class="mui-card-header mui-card-media" :style="{backgroundImage: 'url(' + items.product_pic + ')'}">
											<div class="address"><i class="iconfont icon-dingwei"></i>{{ items.region }}</div>
										</div>
										<div class="mui-card-content">
											<div class="mui-card-content-inner">
												<p class="textShow"><strong>【{{ items.merchant_name }}】</strong>{{ items.product_name }}
												</p>
											</div>
										</div>
										<div class="mui-cardFooter">
											<p><span class="cardTrue">¥{{items.temp_price}}</span><span class="cardFalse"></span></p>
											<p v-if="level == 2 || level == 3 || level == 4 || level == 5"><span class="cardText">佣金：</span><span class="cardMoney">¥{{items.temp_commission.zigou}}</span></p>
										</div>
									</div>
								</div>
							</div>
							<div class="swiper-slide">
								<div class="goodsBox">
								<div class="mui-card" v-if="proHotpush.length>4" v-for="items in proHotpush.slice(4, 8)" @tap="jumpToDetails(items.product_id)">
									<div class="mui-card-header mui-card-media" :style="{backgroundImage: 'url(' + items.product_pic + ')'}">
										<div class="address"><i class="iconfont icon-dingwei"></i>{{ items.region }}</div>
									</div>
									<div class="mui-card-content">
										<div class="mui-card-content-inner">
											<p class="textShow"><strong>【{{ items.merchant_name }}】</strong>{{ items.product_name }}
											</p>
										</div>
									</div>
									<div class="mui-cardFooter">
										<p><span class="cardTrue">¥{{items.temp_price}}</span><span class="cardFalse"></span></p>
										<p v-if="level == 2 || level == 3 || level == 4 || level == 5"><span class="cardText">佣金：</span><span class="cardMoney">¥{{items.temp_commission.zigou}}</span></p>
									</div>
								</div>
								<!--空状态时-->
								<div class="lw-empty" style="display: block;" v-else>
									<div class="lw-empty-box">
										<div class="lw-empty-flex">
											<img src="../../img/personalCenter/nullList2.png" alt="" class="lw-empty-img" />
											<div class="lw-empty-test">暂无更多产品！</div>
										</div>
									</div>
								</div>
								</div>
							</div>
						</div>
						<!-- Add Pagination -->
						<div class="swiper-pagination swiper-pagination-bullets">
							<span class="swiper-pagination-bullet"></span>
							<span v-if="proHotpush.length > 4" class="swiper-pagination-bullet"></span>
						</div>
						<span class="swiper-notification" aria-live="assertive" aria-atomic="true"></span>
					</div>
				</div>
				<div class="downBtn">
					<div class="downBtnOne" @tap="jumpToHomePage">首页</div>
					<div v-if="proDetail.sold_out == 0" class="downBtnTwo" @tap="shareProduct()">分享</div>
					<div v-if="proDetail.sold_out == 0" class="downBtnThree" @tap="BuyNow(proDetail.product_id,proPrice.price_id)">立即购买</div>
					<div v-if="proDetail.sold_out == 1" class="downBtnFour">已售罄</div>
				</div>
			</div>
		</div>
		<div class="modalBox">
			<div class="modalCard">
				<div class="createImg">
					<img src="../../img/homePage/productDetails2.png"/>
					<div>生成海报</div>
				</div>
				<div class="createUrl">
					<img src="../../img/homePage/productDetails1.png"/>
					<div>生成链接</div>
				</div>
			</div>
		</div>
		<div class="modalBox1">
			<img class="closeImg" src="../../img/homePage/productDetails3.png"/>
		</div>
		<div class="modalBox2">
			<div class="modalCard2">
				<img class="modelImg" src="../../img/homePage/homePage3.png" />
				<i class="modelClose iconfont icon-guanbi" id="closeModelBtn"></i>
			</div>
		</div>
		<script src="../../plugins/flexible.js"></script>
		<script type="text/javascript" src="http://res.wx.qq.com/open/js/jweixin-1.4.0.js"></script>
		<script type="text/javascript" src="https://webapi.amap.com/maps?v=1.4.10&key=b286bfefabeab1fbee7737811fb1ab0c&plugin=AMap.Geocoder"></script>
		<script src="../../plugins/jquery-2.1.4.js"></script>
		<script src="../../plugins/vue.js"></script>
		<script src="../../js/mui.min.js"></script>
		<script src="../../plugins/swiper-4.3.3.min.js"></script>
		<script src="../../plugins/serverApi.js"></script>
		<script type="text/javascript">
			$(function() {
				mui.init({
				    gestureConfig: {
				        longtap: true,
				    },
				});
				
				var code = getUrlParam("code");
				var token = localStorage.getItem("token");
				var productId = getUrlParam("productId"); //商品id
				if(getUrlParam("recode")) {
					localStorage.setItem("recode", getUrlParam("recode"))
				}
				var recode = localStorage.getItem("recode");
				
				
				var latitude = localStorage.getItem("latitude") || 30.65618; //纬度
				var longitude = localStorage.getItem("longitude") || 104.08329; //经度
				var provincecode = localStorage.getItem("provincecode") || 510000; //省code
				var citycode = localStorage.getItem("citycode") || 510100; //市code
				
				
				if(token){
					$.ajax({
						url: API_SERVER + 'Wechat/hasToken',
						async: false,
						data:{token:token},
						success: function (data){
