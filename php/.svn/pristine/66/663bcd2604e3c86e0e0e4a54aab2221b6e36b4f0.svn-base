				//倒计时
				function countdown(startTimeIn,endTimeIn) {
					var self = this;
					var timer = setInterval(function() {
						let nowTime = new Date().getTime();
						let startTime = startTimeIn * 1000;
						let endTime = endTimeIn * 1000;
						
						let t = endTime - nowTime;
						let k = startTime - nowTime;
						
						if(k > 0){
							let day = Math.floor(k / 86400000);
							let hour = Math.floor((k / 3600000) % 24);
							let min = Math.floor((k / 60000) % 60);
							let sec = Math.floor((k / 1000) % 60);
							hour = hour < 10 ? "0" + hour : hour;
							min = min < 10 ? "0" + min : min;
							sec = sec < 10 ? "0" + sec : sec;
							let format = '';
							format = `距离开始：${day}天${hour}小时${min}分${sec}秒`;
							self.countdownText = format;
						}
						
						if(t > 0 && k < 0) {
							let day = Math.floor(t / 86400000);
							let hour = Math.floor((t / 3600000) % 24);
							let min = Math.floor((t / 60000) % 60);
							let sec = Math.floor((t / 1000) % 60);
							hour = hour < 10 ? "0" + hour : hour;
							min = min < 10 ? "0" + min : min;
							sec = sec < 10 ? "0" + sec : sec;
							let format = '';
							format = `距离结束：${day}天${hour}小时${min}分${sec}秒`;
							self.countdownText = format;
						} else if(t < 0){
							clearInterval(timer);
							self.countdownText = "已结束";
						}
					}, 1000);
				}
				
				//点击滚动到指定位置
