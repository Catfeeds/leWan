<!doctype html>
<html>

	<head>
		<meta charset="UTF-8">
		<title>消息详情</title>
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<link href="../../css/mui.min.css" rel="stylesheet" />
		<link href="../../css/leWan.css" rel="stylesheet" />
		<link href="../../plugins/swiper.min.css" rel="stylesheet" />
		<link href="../../fonts/iconfont.css" rel="stylesheet" />
		<style type="text/css">
			body {
				padding: 0;
				margin: 0;
				background-color: #F8F8F8;
				min-height: 100vh;
			}
			.content{
				text-align: center;
				overflow: hidden;
			}
			.title{
				font-size: 0.6rem;
				color: #333333;
				font-weight: bold;
				margin: 0.3rem 0.5rem;
			}
			.text{
				display: inline-block;
				text-align:left;
				text-indent: 1rem;
				font-size: 0.4rem;
				color: #999999;
				font-weight: 500;
				width: 90%;
				margin-top: 0.3rem;
				height: auto;
			    word-wrap:break-word;
			    word-break:break-all;
			    overflow: hidden;
			}
		</style>
	</head>

	<body>
		<div class="content">
			<div class="title">
				文章标题
			</div>
			<div class="text">
				文章内容
			</div>
		</div>
		<script src="../../plugins/flexible.js"></script>
		<script src="../../plugins/jquery-2.1.4.js"></script>
		<script src="../../plugins/vue.js"></script>
		<script src="../../js/mui.min.js"></script>
		<script src="../../plugins/swiper.min.js"></script>
		<script src="../../plugins/serverApi.js"></script>
		<script type="text/javascript">
			$(function() {
				var token = localStorage.getItem("token");
				var msgId = getUrlParam("msgId");
				$.ajax({
					url: API_SERVER + "user/getSysMsgInfo",
					data: {
						token: token,
						m_id: msgId
					},
					success: function(data) {
						log(data)
						if(data.code == 200){
							$('.title').text(data.data.msg_title)
							$('.text').text(data.data.msg_content)
						}
					}
				});
			})
		</script>
	</body>

</html>