
<div class="layui-input-block" >
    <a href="{:url('Bank/BankList')}" class="layui-btn"><i class="fa fa-mail-reply"></i> 返回列表</a>
</div>

<div class="page" style="padding:20px 0px 0px 0px;">
    <form class="layui-form layui-input-block" action="{:url('Bank/BankDet')}" method="post" enctype="multipart/form-data">
        <input type='hidden'  name="id" value="{$data.bank_id}">

        <div class="layui-form-item col-sm-6">
            <label class="layui-form-label">银行名：</label>
            <div class="layui-input-block">
                <input type="text"  lay-verify="min7" class="layui-input" disabled value="{$data.bank_name}">
            </div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">银行图标</label>
            <div class="layui-input-inline">
                <input type="file" name="img" textname="bank_icon" class="layui-upload-file" lay-ext="jpg|png|gif" lay-title="点击上传">
                <input type="hidden" name="bank_icon" value="{$data.bank_icon}">
                <div class="img_preview bank_icon" title="图片预览"><img src="/uploads/{$data.bank_icon}"></div>
            </div>
            <div class="clear"></div>
        </div>

        <div class="layui-form-item">
            <label class="layui-form-label">银行背景</label>
            <div class="layui-input-inline">
                <input type="file" name="img" textname="bank_back" class="layui-upload-file" lay-ext="jpg|png|gif" lay-title="点击上传">
                <input type="hidden" name="bank_back" value="{$data.bank_back}">
                <div class="img_preview bank_back" title="图片预览"><img src="/uploads/{$data.bank_back}"></div>
            </div>
            <div class="clear"></div>
        </div>

        <div class="layui-form-item">
            <div class="layui-input-block">
                <button class="layui-btn" lay-submit lay-filter="formDemo">立即提交</button>
            </div>
        </div>
</form>
</div>

