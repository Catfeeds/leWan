<!doctype html>
<html>

	<head>
		<meta charset="UTF-8">
		<title>支付成功</title>
		<meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
		<link href="../../css/mui.min.css" rel="stylesheet" />
		<link href="../../css/leWan.css" rel="stylesheet" />
		<link href="../../plugins/swiper-4.3.3.min.css" rel="stylesheet" />
		<link href="../../fonts/iconfont.css" rel="stylesheet" />
		<style type="text/css">
			body {
				padding: 0;
				margin: 0
			}
			/*页头*/
			
			.header {
				background-color: #FFFFFF;
				padding: 0.453rem 0.586rem 0.373rem 0.586rem;
			}
			
			.headerOne>span:nth-child(1) {
				font-size: 0.426rem;
				color: #333333;
				font-weight: bold;
			}
			
			.headerOne>span:nth-child(2) {
				float: right;
				font-size: 0.373rem;
				color: #999999;
				font-weight: bold;
			}
			
			.headerTwo {
				margin-top: 0.24rem;
				height: 0.826rem;
				line-height: 0.826rem;
				overflow: hidden;
			}
			
			.headerTwo>div>span {
				font-size: 0.4rem;
				color: #F77917;
				font-weight: 600;
				margin-right: 0.2rem;
			}
			
			.headerTwo>div>div {
				float: right;
				padding: 0 0.2rem;
				text-align: center;
				height: 0.693rem;
				line-height: 0.6963rem;
				font-size: 0.373rem;
				background-color: #F77917;
				display: inline-block;
				border-radius: 0.5rem;
				color: #FFFFFF;
				font-weight: bold;
			}
			/*页头*/
			
			.headerBox {
				background-color: #FFFFFF;
				overflow: hidden;
			}
			
			.cardBox {
				width: 8.746rem;
				height: 3.413rem;
				margin: 0.506rem 0.613rem;
				border-radius: 5px;
				box-shadow: #999 0px 0px 10px;
				overflow: hidden;
				position: relative;
			}
			
			.cardBox1 {
				font-size: 0.373rem;
				overflow: hidden;
				text-overflow: ellipsis;
				white-space: nowrap;
				margin: 0.533rem 0.1rem;
			}
			
			.cardBox1>strong {
				font-size: 0.506rem;
				color: #333333;
			}
			
			.cardBox2 {
				padding-left: 0.426rem;
			}
			
			.realityPrice {
				font-size: 0.586rem;
				color: #333333;
			}
			
			.originalCost {
				font-size: 0.373rem;
				color: #999999;
				text-decoration: line-through;
				margin-left: 0.4rem;
			}
			
			.cardBox3 {
				position: absolute;
				bottom: 0;
				background-color: #E1B872;
				color: #FFFFFF;
				text-align: center;
				width: 100%;
				height: 0.8rem;
				line-height: 0.8rem;
			}
			
			.content {
				margin-top: 0.266rem;
			}
			/*查看更多*/
			
			.MoreModal {
				display: none;
				width: 100vw;
				height: 100vh;
				position: fixed;
				top: 0;
				left: 0;
				background-color: rgba(0, 0, 0, 0.6);
				z-index: 10;
			}
			
			.modalContent {
				margin: 0 auto;
				margin-top: 1.6rem;
				width: 7.6rem;
				border-radius: 0.2rem;
				overflow: hidden;
				background-color: #FFFFFF;
			}
			
			.modalTitle {
				margin: 0 auto;
				width: 2.453rem;
				height: 1rem;
				line-height: 1rem;
				text-align: center;
				background-color: #F76E1E;
				color: #FFFFFF;
				font-size: 0.373rem;
				font-weight: bold;
				border-bottom-left-radius: 0.3rem;
				border-bottom-right-radius: 0.3rem;
			}
			
			.modalBox {
				margin-top: 0.133rem;
				height: 8rem;
				overflow-y: scroll;
			}
			
			.modalBox:after,
			.modalBox:before {
				height: 0;
			}
			
			.modalBox>li {
				margin: 0 0.15rem;
			}
			
			.modalBox span:nth-child(1) {
				font-size: 0.426rem;
				font-weight: bold;
				color: #F77917;
			}
			
			.modalBox span:nth-child(2) {
				float: right;
				font-size: 0.373rem;
				font-weight: bold;
				color: #333333;
			}
			
			.closeModal {
				margin-top: 0.266rem;
				height: 1rem;
				line-height: 1rem;
				text-align: center;
				background-color: #F76E1E;
				color: #FFFFFF;
				font-size: 0.373rem;
				font-weight: bold;
			}
			/*列表行间距调节*/
			
			.mui-input-row {
				height: 1.4rem !important;
				line-height: 1.4rem !important;
			}
			
			.mui-input-row label {
				line-height: 2;
			}
			
			.mui-input-row input {
				line-height: 2;
				height: auto;
			}
			
			.mui-input-row label {
				font-size: 0.426rem;
				color: #333333;
				font-weight: bold;
			}
			
			.mui-input-row input {
				font-size: 0.426rem;
			}
			
			.postscript label {
				font-size: 0.426rem;
				color: #333333;
				font-weight: bold;
				line-height: 1.1;
				float: left;
				width: 35%;
				padding: 11px 15px;
			}
			
			.postscript textarea {
				width: 90%;
				margin: 0 5% 5px 5%;
				background-color: #FFFFFF;
				padding: 5px 10px;
				border-radius: 8px;
			}
			
			.mui-input-group:after {
				height: 0;
			}
			/*尾部*/
			
			.footer {
				background: linear-gradient(to right, #FD751B 0%, #E3340D 100%);
				text-align: center;
				width: 100%;
				height: 1.333rem;
				line-height: 1.333rem;
				color: #FFFFFF;
				font-size: 0.426rem;
				font-weight: 500;
				position: fixed;
				bottom: 0;
				left: 0;
			}
			
		</style>
	</head>

	<body>
		<div id="J_el" v-cloak>
			<div v-if="showPage">
				<div class="header">
					<div class="headerOne">
						<span>{{ (proDetail.express == 1) ? '消费电子码：' : '订单号：' }} </span>
						<span class="goToMessageDetails">消费说明？</span>
					</div>
					<div class="headerTwo">
						<!--type=1电子码 type=2订单号-->
						<div v-if="proDetail.express == 1">
							<span v-for="items in codeList.slice(0,2)">{{items.consume_code}}</span>
							<div v-if="codeList.length>1" id="lookAtMore">查看更多</div>
							<div v-else-if="codeList.length == 1 && proDetail.reservation == 1" @tap="jumpToUse(1,codeList[0].consume_code,proDetail.order_id)">去预约</div>
						</div>
						<div v-else-if="proDetail.express == 2">
							<span>{{proDetail.order_no}}</span>
							<div v-if="proDetail.reservation == 1" @tap="jumpToUse(2,proDetail.order_id,0)">去预约</div>
						</div>
					</div>
				</div>

				<div class="content">
					<div class="headerBox">
						<div class="cardBox">
							<div class="cardBox1"><strong>{{ proDetail.product_name }}</strong></div>
							<div class="cardBox2">
								<span class="realityPrice">￥{{ proDetail.price }}</span>
								<span class="originalCost">￥{{ proDetail.settle }}</span>
							</div>
							<div v-if="proDetail.express==1" class="cardBox3">商品有效期限：{{ getDateTime(proDetail.startusetime,'Y-MM-dd') }}至{{ getDateTime(proDetail.endusetime,'Y-MM-dd') }}</div>
							<div v-else-if="proDetail.express==2" class="cardBox3">收到商品后，请到订单详情确认收货</div>
						</div>
					</div>
					<form class="mui-input-group">
						<div class="mui-input-row">
							<label>购买数量：</label>
							<input type="text" v-model="num" readonly="readonly">
						</div>
						<div class="mui-input-row">
							<label>联系人名：</label>
							<input type="text" v-model="fullname" readonly="readonly">
						</div>
						<div class="mui-input-row">
							<label>联系电话：</label>
							<input type="number" v-model="mobile" readonly="readonly">
						</div>
						<div class="postscript">
							<label>备注信息：</label>
							<textarea rows="2" readonly="readonly">{{ remarks }}</textarea>
						</div>
					</form>
				</div>
				<div class="footer" @tap="goToDetails(proDetail.order_id)">订单详情</div>
				<div class="MoreModal">
					<div class="modalContent">
						<div class="modalTitle">消费电子码</div>
						<ul class="mui-table-view modalBox">
							<li class="mui-table-view-cell" v-for="items in codeList">
								<span>{{items.consume_code}}</span>
								<!--有多个电子码才有-->
								<span v-if="proDetail.reservation == 1" @tap="jumpToUse(1,items.consume_code,proDetail.order_id)">去预约</span>
							</li>

						</ul>
						<div class="closeModal" id="closeModal">关闭</div>
					</div>
				</div>
			</div>
		</div>

		<script src="../../plugins/flexible.js"></script>
		<script type="text/javascript" src="http://res.wx.qq.com/open/js/jweixin-1.4.0.js"></script>
		<script src="../../plugins/jquery-2.1.4.js"></script>
		<script src="../../plugins/vue.js"></script>
		<script src="../../js/mui.min.js"></script>
		<script src="../../plugins/swiper-4.3.3.min.js"></script>
		<script src="../../plugins/serverApi.js"></script>
		<script src="../../plugins/getTokenCommon.js"></script>
		<script type="text/javascript">
			$(function() {
				var token = localStorage.getItem("token");
				var orderNumber = getUrlParam("orderNumber");

				var vueData = {
					showPage: false,
					num: 1,
					fullname: "联系人",
					mobile: 13888888888,
					remarks: "暂无备注信息！",
					proDetail: {},
					codeList: [],
				}
				new Vue({
					el: "#J_el",
					data: vueData,
					methods: {
						jumpToUse: jumpToUse,
						goToDetails: goToDetails
					}
				})

				getDetails();

				function getDetails() {
					$.ajax({
						url: API_SERVER + "Ordersubscribe/OrderType",
						data: {
							token: token,
							order_no: orderNumber,
						},
						success: function(data) {
							log(data)
							if(data.code == 200) {
								vueData.showPage = true;
								vueData.num = data.data.num;
								vueData.fullname = data.data.fullname;
								vueData.mobile = data.data.mobile;
								vueData.remarks = data.data.remarks;
								vueData.codeList = data.data.code;
								vueData.proDetail = data.data
							} else {
								mui.toast(data.message)
							}
						}
					});
				}

				//去使用
				function jumpToUse(type, number,id) {
					if(type == 1) {
						mui.openWindow({
							url: BASE_SERVER + "wechat_html/page/reservationCenter/appointmentTime.html?code=" + number + "&orderId=" + id
						})
					} else if(type == 2) {
						mui.openWindow({
							url: "../reservationCenter/expressAppointment.html?orderId=" + number
						})
					}
				}
				
				//查看详情
				function goToDetails(id){
					mui.openWindow({
						url: "../reservationCenter/indentDetail.html?orderId="+id
					})
				}
				
				
				mui('body').on('tap', '#lookAtMore', function() { //查看更多
					$(".MoreModal").css({
						"display": "block"
					})
				})

				mui('body').on('tap', '#closeModal', function() { //关闭查看更多
					$(".MoreModal").css({
						"display": "none"
					})
				})
				mui('body').on('tap', '.goToMessageDetails', function() { //消费码说明
					mui.openWindow({
						url: "../homePage/articleTemplate.html?msgId="+8
					})
				})

			})
		</script>
	</body>

</html>